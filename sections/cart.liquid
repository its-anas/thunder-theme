{{ 'cart.css' | asset_url | stylesheet_tag }}

{% style %}
  .cart-page {
    padding-top: 10rem;
  }
{% endstyle %}

<div class="cart-page">
  <div class="cart-page__container wrapped">
    <div class="cart-page__head">
      <h3 class="cart-page__title">Cart</h3>
    </div>
    <div class="cart-page__content">
      <div class="cart-page__content-inner">
        <div class="cart-page__content-head">
          <p>Product</p>
          <p>Quantity</p>
          <p>Price</p>
        </div>
        <div class="cart-page__products">
          {% comment %} Start loop here - for every product in cart items {% endcomment %}
          <div class="cart-page__product">
            <div class="cart-page__product-details">
              <div class="cart-page__product-picture">
                {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
              </div>
              <div class="cart-page__product-info">
                <div class="cart-page__product-name">Product name</div>
                {% comment %} Loop through variants {% endcomment %}
                <div class="cart-page__product-variant">Color: Black</div>
                <div class="cart-page__stock-disclaimer">Low stokc - 16 items left</div>
              </div>
            </div>
            <div class="cart-page__product-quantity">
              <quantity-field class="quantity" {{ block.shopify_attributes }}>
                <div class="quantity-field" id="quantity-field">
                  <button type="button" class="quantity-field__minus" id="quantity-field__minus">-</button>
                  <input
                    type="quantity"
                    class="quantity-field__input"
                    id="quantity-field__input"
                    name="quantity"
                    min="1"
                    value="1"
                  >
                  <button type="button" class="quantity-field__plus" id="quantity-field__plus">+</button>
                </div>
              </quantity-field>
            </div>
            <div class="cart-page__product-prices">
              <div class="cart-page__product-price"></div>
              <div class="cart-page__product-compare-at"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="cart-page__interaction">
        <div class="cart-page__interaction-inner">
          <div class="cart-page__interaction-top-text">
            <p class="cart-page__interaction-text">Total</p>
            <p class="cart-page__total-amount">{{ cart.total_price | money }}</p>
          </div>
          <div class="cart-page__button buttons">
            <a class="button button--primary border" id="featured-product-add-to-cart">
              <span></span> <span></span> <span></span> <span></span>CHECKOUT</a
            >
          </div>
          <div class="cart-page__interaction-bottom-text">
            <p class="cart-page__order-note">Edit order note</p>
            <p class="cart-page__checkout-disclaimer">Taxes & shipping calculated at checkout</p>
          </div>
        </div>
        <div class="cart-page__trust-badges"></div>
      </div>
    </div>
  </div>
</div>

{% comment %}
   {% for item in cart.items %}
    <div class="product" style="padding: 2rem 0rem;">
      <p>{{ item.title }}</p>
      {% for option in item.options_with_values %}
        <div class="variant" style="display: flex; flex-direction: row; gap: 1rem;">
          <p>{{ option.name }}:</p>
          <p>{{ option.value }}</p>
        </div>
      {% endfor %}
      <p>{{ item.variant.id }}</p>
      <p>{{ item.quantity }}</p>
      <p>{{ item.final_price }}</p>
    </div>
  {% endfor %}
{% endcomment %}
