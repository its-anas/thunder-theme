{% liquid
  assign mobile_items = section.settings.mobile_items
  assign tablet_items = section.settings.tablet_items
  assign desktop_items = section.settings.desktop_items
  assign desktop_section_width = section.settings.row_width
  assign items_limit = section.settings.items_limit
%}

{%- style -%}
  .{{ section.id }}.blog-posts > .slider-component > .slides-container {
    --mobile-items: {{ mobile_items }};
    --tablet-items: {{ tablet_items }};
    --desktop-items: {{ desktop_items }};
  }
  @media screen and (min-width: 1025px) {
    .{{ section.id }}.blog-posts > .slider-component > .slides-container {
      --container-width: calc(var(--section-width) * {{ desktop_section_width | divided_by: 100.00 }} );
    }
    .{{ section.id }}.blog-posts > .slider-component > .prev,
    .{{ section.id }}.blog-posts > .slider-component > .next {
      width: {{ 100 | minus: desktop_section_width | divided_by: 2 }}%;
    }
  }

  .{{ section.id }}.blog-posts > .slider-component > .slides-container > .slide > .item {
    aspect-ratio: {{ section.settings.aspect_ratio }};
  }

  .{{ section.id }}.blog-posts {
    gap: {{ section.settings.space_between_elements }}rem;
    padding: {{ section.settings.space_outside_elements | divided_by: 2 }}px 0;
  }

  .{{ section.id }}.just-color {
    background-color: {{ section.settings.background_color }};
   }

  .{{ section.id }}.image {
    background-image: url({{ section.settings.background_image | image_url: width: settings.wrapped_content_width }});
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }
{%- endstyle -%}

<slider-section
  data-mobile-items="{{ mobile_items }}"
  data-tablet-items="{{ tablet_items }}"
  data-desktop-items="{{ desktop_items }}"
  class="{{ section.id }} blog-posts just-color {% if section.settings.background_image == blank %}just-color{% else %}{{ section.settings.background_type }}{% endif %} {{ section.settings.section_width }}"
>
  <div class="blog-posts__heading">
    <h6>{{ section.settings.heading }}</h6>
  </div>
  <div class="slider-component">
    <div class="prev">
      {% render 'icons', icon: 'chevron-prev' -%}
    </div>
    <div class="slides-container">
      <div class="slide">
        {%- for article in section.settings.blog.articles limit: section.settings.items_limit -%}
          <div class="item">
            <a href="{{ article.url }}" class="blog-posts__image">
              <div class="media">
                {% if article.image != blank %}
                  <img
                    srcset="{{ article.image | image_url }}"
                    loading="lazy"
                    alt="{{ article.image.alt | escape }}"
                    width="{{ article.image.width }}"
                    height="{{ article.image.height }}"
                    class="fit"
                  >
                {% else %}
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder' }}
                {% endif %}
              </div>
            </a>
            <a href="{{ article.url }}" class="blog-posts__container">
              <div class="blog-posts__author">
                <p class="text label-text ">{{ article.created_at | date: format: 'abbreviated_date' }}</p>
              </div>
              <div class="blog-posts__title">
                <p class="text small">{{ article.title }}</p>
              </div>
            </a>
          </div>
        {%- endfor -%}
        {% if section.settings.blog == blank %}
          {% capture placeholder_post %}
            <div class="item">
              <a class="blog-posts__image">
                <div class="media">
                  {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder' }}
                </div>
              </a>
              <a class="blog-posts__container">
                <div class="blog-posts__author">
                  <p class="text label-text ">Publication date</p>
                </div>
                <div class="blog-posts__title">
                  <p class="text small">Article title</p>
                </div>
              </a>
            </div>
          {% endcapture %}
          {% for i in (1..5) %}
            {{ placeholder_post }}
          {% endfor %}
        {% endif %}
      </div>
    </div>
    <div class="next">
      {% render 'icons', icon: 'chevron-next' -%}
    </div>
  </div>
  <div class="blog-posts__link">
    <a class="button--link small" href="{{ section.settings.blog.url }}">View all</a>
  </div>
</slider-section>

{% schema %}
{
  "name": "Blog posts",
  "settings": [
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Blog posts"
    },
    {
      "type": "header",
      "content": "Article settings"
    },
    {
      "type": "range",
      "id": "aspect_ratio",
      "min": 0.5,
      "max": 2,
      "step": 0.1,
      "unit": "a/r",
      "label": "Aspect ratio",
      "default": 1.4
    },
    {
      "type": "range",
      "id": "mobile_items",
      "min": 1,
      "max": 3,
      "step": 1,
      "unit": "p",
      "label": "Posts per row - mobile",
      "default": 1
    },
    {
      "type": "range",
      "id": "tablet_items",
      "min": 2,
      "max": 6,
      "step": 1,
      "unit": "p",
      "label": "Posts per row - tablet",
      "default": 2
    },
    {
      "type": "range",
      "id": "desktop_items",
      "min": 3,
      "max": 6,
      "step": 1,
      "unit": "p",
      "label": "Posts per row - desktop",
      "default": 3
    },
    {
      "type": "range",
      "id": "items_limit",
      "min": 3,
      "max": 20,
      "step": 1,
      "unit": "p",
      "label": "Maximum number of posts",
      "default": 8
    },
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "just-color",
          "label": "Color"
        }
      ],
      "default": "just-color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent",
      "info": "Applied only if Type is 'Color'"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image",
      "info": "Applied only if Type is 'Image'"
    },

    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 1,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "space_outside_elements",
      "label": "Space outside elements",
      "min": 30,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "row_width",
      "min": 40,
      "max": 90,
      "step": 5,
      "unit": "%",
      "label": "Row width relative to screen",
      "default": 50
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "default": "full",
      "options": [
        {
          "value": " ",
          "label": "Full width"
        },
        {
          "value": "wrapped",
          "label": "Wrapped"
        }
      ],
      "default": " "
    }
  ],
  "presets": [
    {
      "name": "Blog posts"
    }
  ]
}
{% endschema %}
