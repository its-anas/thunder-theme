{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .customer.{{ section.id }} {
    padding-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .customer.{{ section.id }} {
      padding-top: {{ section.settings.top_space }}px;
      padding-bottom: {{ section.settings.bottom_space }}px;
    }
  }
{%- endstyle -%}

<div class="customer customer-login {{ section.id }}">
  <div class="customer__container active" id="recover_page">
    <h2 class="customer__form__title">Recover password</h2>
    <p>Please enter your e-mail:</p>

    {%- form 'recover_customer_password', class: 'customer__form' -%}
      {%- if form.errors -%}
        <div class="customer__form__errors-list__item">
          <div>
            <span> âš  </span>
            <span>{{ form.errors.messages.form }}</span>
          </div>
        </div>
      {%- endif -%}
      <div class="customer__form__content">
        <input
          type="email"
          value=""
          name="email"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          placeholder="Email"
          class="customer__form__input"
          required
        >
      </div>
      <div class="customer__form__button buttons">
        <button class="button button--primary border">RECOVER</button>
      </div>
    {%- endform -%}
    <div class="customer__form__link">
      <a href="{{ routes.account_login_url }}" id="login" class="small underline">Back to login</a>
    </div>
  </div>

  {%- if shop.checkout.guest_login -%}
    <span>Continue as a guest</span>

    {%- form 'guest_login' -%}
      <div class="buttons">
        <button class="button button--primary border">Continue</button>
      </div>
    {%- endform -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Customer login",
  "class": "section-customer-login",
  "settings": [
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom space",
      "default": 0
    }
  ]
}
{% endschema %}
