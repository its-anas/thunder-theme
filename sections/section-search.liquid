{%- style -%}
  .{{ section.id }}.search-section {
      margin-top: {{ section.settings.space_outside_elements| divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside_elements | divided_by: 2 }}px;
      gap: {{ section.settings.space_between_elements }}rem;
      min-height: {{ section.settings.height }}px;
      background-color: {{ section.settings.background_color }};
   }

   @media screen and (min-width: 750px) {
      .{{ section.id }}.search-section > .search-form__container  {
          width: {{ section.settings.field_width }}px;
      }
   }
{%- endstyle -%}

<section class="{{ section.id }} search-section">
  {% if section.settings.heading != blank %}
    <div class="search-section__heading">
      <{{ section.settings.heading_size }}>
        {{ section.settings.heading }}
      </{{ section.settings.heading_size }}>
    </div>
  {% endif %}
  <predictive-search class="search-form__container">
    <form action="{{ routes.search_url }}" method="get" class="search-section__form">
      <input
        id="Search"
        class="search-form__input"
        type="search"
        name="q"
        value="{{ search.terms | escape }}"
        placeholder="Search..."
        {%- if settings.predictive_search_enabled -%}
          autocorrect="off"
          autocomplete="off"
          autocapitalize="off"
          spellcheck="false"
        {%- endif -%}
      >
      {%- if settings.predictive_search_enabled -%}
        <div class="search-form__results" id="predictive-search" tabindex="-1"></div>
      {%- endif -%}
    </form>
    <a class="search__icon">
      {% render 'snippet-icons', icon: 'search' %}
    </a>
  </predictive-search>
</section>

{% schema %}
{
  "name": "Search",
  "class": "section-search",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Search our store"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h6"
    },
    {
      "type": "range",
      "id": "field_width",
      "min": 300,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Field width",
      "default": 450,
      "info": "Desktop and tablet only"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent",
      "info": "Applied only if Type is 'Color'"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 1,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "space_outside_elements",
      "label": "Space outside elements",
      "min": 100,
      "max": 200,
      "step": 50,
      "unit": "px",
      "default": 100
    },
    {
      "type": "range",
      "id": "height",
      "min": 150,
      "max": 300,
      "step": 50,
      "unit": "px",
      "label": "Section height",
      "default": 150
    }
  ],
  "presets": [
    {
      "name": "Search"
    }
  ]
}
{% endschema %}
