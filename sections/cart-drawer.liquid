{%- style -%}
  :root {
    {% comment %}  UNFINISHED: Need to replace cart total with real one  {% endcomment %}
    --cart-total: 24;
  }
  .cart-drawer__container, .cart-drawer__content--empty {
    background-color: black;
    border: 2px solid white;
    border-radius: 0px;
  }
  .recommended-products {
    background-color: #222;
  }
  .recommended-products.desktop-only {
    border: 2px solid white;
    border-radius: 0px;
  }
  {% if section.settings. show_cart_recommended_products == true %}
    .recommended-products.desktop-only.active {
      transform: translateX(-99%);
      transition: transform 0.8s cubic-bezier(0.75, 0, 0.175, 1);
    }
  {% else %}
    .recommended-products.mobile-only {
      display: none;
    }
  {% endif %}
{%- endstyle -%}

<cart-component class="hidden">
  <div class="cart-drawer">
    <div class="cart-drawer__content--filled">
      <div class="cart-drawer__container">
        <div class="cart-drawer__head">
          <div class="cart-drawer__title">
            <h6>Cart</h6>
          </div>
          <div id="close-icon">
            {% render 'icons', icon: 'close' %}
          </div>
        </div>
        <div class="free-shipping-reminder">
          {% comment %}  UNFINISHED: Need to replace cart total with real one  {% endcomment %}
          {% assign free_shipping_threshold = settings.free_shipping_threshold | times: 1 %}
          {% assign cart_total = 24.00 %}
          <p class="free-shipping-reminder__text">
            {% if cart_total < free_shipping_threshold %}
              Spend {{ free_shipping_threshold | minus: cart_total | times: 100 | money }} more and get free shipping
            {% else %}
              Congratulations! You have qualified for free shipping
            {% endif %}
          </p>
          <div class="free-shipping-reminder__bar">
            <div
              class="free-shipping-reminder__bar__inside {% if cart_total < free_shipping_threshold %}not-enough{% endif %}"
            ></div>
          </div>
        </div>
        <div class="cart-drawer__products">
          {% comment %}  UNFINISHED: Need to replace products with real ones  {% endcomment %}
          <div class="cart-drawer__products-list"></div>
          <div class="recommended-products mobile-only">
            <p class="recommended-products__title">You may also like</p>
            <div class="recommended-products__list">
              <div class="recommended-products__list-container">
                {% for recommended-product in (1..10) %}
                  <div class="recommended-product">
                    <div class="recommended-product__image">
                      <svg
                        width="65"
                        height="65"
                        viewBox="0 0 65 65"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink"
                      >
                        <rect width="64" height="64" transform="translate(0.868164 0.561523)" fill="url(#pattern0)"/>
                        <defs>
                        <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                        <use xlink:href="#image0_1212_33917" transform="scale(0.0015625)"/>
                        </pattern>
                        <image id="image0_1212_33917" width="640" height="640" xlink:href="data:image/png;base64,"/>
                        </defs>
                      </svg>
                    </div>
                    <div class="recommended-product__details">
                      {% assign recommended_product_name = 'Product very long name one very long name one' %}
                      <p class="product-name">{{ recommended_product_name | truncate: 20 }}</p>
                      <p class="price--actual">$39.99</p>
                      <a href="" class="button--link">VIEW PRODUCT</a>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
        <div class="cart-drawer__interaction">
          <div class="cart-drawer__interaction--empty">
            <p class="cart-drawer__empty-message">Your cart is empty</p>
            <div class="buttons">
              <a
                class="button button--primary border"
                href="/collections/all"
              >
                <span></span> <span></span> <span></span> <span></span>
                SHOP NOW
              </a>
            </div>
          </div>
          <div class="cart-drawer__interaction--filled">
            <div class="shadow-divider"></div>
            <div class="buttons">
              <a
                class="button button--primary border border"
                href=""
              >
                <span></span> <span></span> <span></span> <span></span>VIEW CART
              </a>
              <a
                class="button button--primary border border"
                href=""
              >
                <span></span> <span></span> <span></span> <span></span> CHECKOUT
              </a>
            </div>
            <div class="bottom">
              <a href="" class="order-note link">Add order note</a>
              <p class="disclaimer">Shipping & taxes calculated at checkout</p>
            </div>
          </div>
        </div>
      </div>
      <div class="recommended-products desktop-only">
        <p class="recommended-products__title">You may also like</p>
        <div class="recommended-products__list">
          <div class="recommended-products__list-container">
            {% comment %}  UNFINISHED: Need to replace recommended products with real ones  {% endcomment %}
            {% for recommended-product in (1..5) %}
              <div class="recommended-product">
                <div class="recommended-product__image">
                  <svg
                    width="65"
                    height="65"
                    viewBox="0 0 65 65"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                  >
                    <rect width="64" height="64" transform="translate(0.868164 0.561523)" fill="url(#pattern0)"/>
                    <defs>
                    <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                    <use xlink:href="#image0_1212_33917" transform="scale(0.0015625)"/>
                    </pattern>
                    <image id="image0_1212_33917" width="640" height="640" xlink:href="data:image/png;base64,"/>
                    </defs>
                  </svg>
                </div>
                <div class="recommended-product__details">
                  <div class="details">
                    {% assign product_name = 'Product very' %}
                    <p class="product-name">{{ product_name | truncate: 40 }}</p>
                    <p class="price--actual">$39.99</p>
                  </div>
                  <a href="" class="button--link">VIEW PRODUCT</a>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</cart-component>

{% schema %}
{
  "name": "Cart drawer",
  "class": "section-cart-drawer openable-element",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_cart_recommended_products",
      "label": "Show recommended products on cart drawer",
      "default": true
    }
  ],
  "blocks": []
}
{% endschema %}
