{%- style -%}
    .{{ section.id }}.text-with-image {
      margin-top: {{ section.settings.space_outside | divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}px;
    }

  {%- if section.settings.background_type == "color" -%}
      .{{ section.id }}.text-with-image {
        background-color: {{ section.settings.background_color }};
      }
  {%- elsif section.settings.background_type == "image" -%}
      .{{ section.id }}.text-with-image {
          background-image: url({{ section.settings.background_image | image_url }});
      }
  {%- endif -%}

  .{{ section.id }} .text-with-image__column {
    background: rgba({{ section.settings.column_background_color.red }}, {{ section.settings.column_background_color.green }}, {{ section.settings.column_background_color.blue }}, {{ section.settings.column_background_opacity | divided_by: 100.0 }});
    backdrop-filter: blur({{ section.settings.column_background_blur }}px);
    border: {{ section.settings.column_border_width }}px solid {{ section.settings.column_border_color }};
  }

  .{{ section.id }}.text-with-image__image {
    height: {{ section.settings.column_image_height_mobile }}px;
  }

  @media screen and (min-width: 750px) {

    .{{ section.id }}.text-with-image > .text-with-image__columns {
      width: {{ section.settings.columns_width }}px;
    }

    .{{ section.id }} .text-with-image__column {
      width: {{ section.settings.columns-per-row }}%;
    }

    .{{ section.id }}.text-with-image__image {
      height: {{ section.settings.column_image_height_desktop }}px;
    }
  }
{%- endstyle -%}

<div class="{{ section.id }} text-with-image {{ section.settings.section_style }}">
  <div class="{{ section.id }} text-with-image__columns container">
    {% for block in section.blocks %}
      <div class="text-with-image__column" {{ block.shopify_attributes }}>
        <div class="{{ section.id }} text-with-image__image">
          {%- if block.settings.column_image == blank -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder' }}
          {%- elsif block.settings.column_image != blank -%}
            <div class="media">
              <img
                srcset="{{ block.settings.column_image | image_url }}"
                loading="lazy"
                alt="{{ block.settings.column_image.alt | escape }}"
                width="{{ block.settings.column_image.width }}"
                height="{{ block.settings.column_image.height }}"
                class="{{ section.settings.column_image_position }}"
              >
            </div>
          {% endif %}
        </div>
        <div class="text-with-image__content">
          <div class="box horizontal--{{ section.settings.text_alignment }} vertical--center text-alignment--{{ section.settings.text_alignment }}">
            <h6>{{ block.settings.heading }}</h6>
            {{ block.settings.text }}

            {% if block.settings.secondary_button_text != blank %}
              <a
                {% if block.settings.secondary_button_link != blank %}
                  href="{{ block.settings.secondary_button_link }}"
                {% endif %}
                class="button--link"
              >
                {{ block.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

