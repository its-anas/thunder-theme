          "value": "80",
          "label": "1 column per row"
        },
        {
          "value": "40",
          "label": "2 columns per row"
        },
        {
          "value": "30",
          "label": "3 columns per row"
        },
        {
          "value": "20",
          "label": "4 columns per row"
        }
      ],
      "default": "20",
      "info": "Applied only to Desktop"
    },
    {
      "type": "header",
      "content": "Section style"
    },
    {
      "type": "select",
      "id": "section_style",
      "label": "Section width",
      "info": "Desktop only",
      "options": [
        {
          "value": "full-width",
          "label": "Full width"
        },
        {
          "value": "wrapped",
          "label": "Wrapped"
        }
      ],
      "default": "full-width"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Section background type",
      "options": [
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ],
      "default": "color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section background color",
      "default": "transparent",
      "info": "Applied only if Type is 'Color'"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Section background image",
      "info": "Applied only if Type is 'mage'"
    },
    {
      "type": "range",
      "id": "space_outside",
      "label": "Space outside section",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "column_image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "heading",
          "default": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
