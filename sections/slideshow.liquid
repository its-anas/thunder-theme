{{ 'slideshow.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .{{ section.id }}.slideshow {
      margin-top: {{ section.settings.space_outside | divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}px;
    }

  .{{ section.id }}.slideshow__picture > .media > img {
    height: {{ section.settings.image_height }}px;
  }

  .{{ section.id }}.slideshow > .slideshow__container {
    min-width: {{ section.blocks.size | times: 100 }}%;
  }

  .{{ section.id }}.slideshow__box {
    gap: {{ section.settings.space_between }}rem;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}.slideshow {
      height: {{ section.settings.image_height }}px;
    }

    .{{ section.id }}-text-width {
          width: {{ section.settings.text_width }}%;
    }
   }
{%- endstyle -%}

<slideshow-section>
  <div class="{{ section.id }} slideshow {% if section.settings.section_width == "wrapped" %} wrapped{% else %}{% endif %}">
    {% comment %} slides {% endcomment %}
    <div class="slideshow__container">
      {% for block in section.blocks %}
        <div class="slideshow__slide">
          {% comment %} Picture {% endcomment %}
          <div class="{{ section.id }} slideshow__picture">
            {%- if block.settings.image == blank -%}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder' }}
            {%- elsif block.settings.image != blank -%}
              <div class="media">
                <img
                  srcset="{{ block.settings.image | image_url }}"
                  loading="lazy"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  class="fit"
                >
              </div>
            {%- endif -%}
          </div>
          {% comment %} Picture end {% endcomment %}

          {% comment %} Content {% endcomment %}
          <div class="slideshow__content container vertical--{{ section.settings.vertical_position }}">
            <div class="{{ section.id }} slideshow__box text-alignment--{{ section.settings.text_alignment }} {{ section.id }}-text-width horizontal--{{ section.settings.horizontal_position }}">
              <{{ block.settings.subheading_size }}>
                {{ block.settings.subheading }}
              </{{ block.settings.subheading_size }}>

              <{{ block.settings.heading_size }}>
                {{ block.settings.heading }}
              </{{ block.settings.heading_size }}>

              {{ block.settings.text }}

              <div class="buttons buttons--{{ section.settings.text_alignment }}">
                {%- if block.settings.primary_button_text != blank -%}
                  <a
                    class="button button--{% if block.settings.button_style == "border" %}primary{% else %}secondary{% endif %} {{ block.settings.button_style }}"
                    href="{{ block.settings.primary_button_link }}"
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.primary_button_text }}
                  </a>
                {%- endif -%}
                {%- if block.settings.secondary_button_text != blank -%}
                  <a
                    class="button button--secondary {{ block.settings.button_style }}"
                    href="{{ block.settings.secondary_button_link }}"
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.secondary_button_text }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>
          {% comment %} Content end {% endcomment %}
        </div>
      {% endfor %}
    </div>

    {% comment %} chevrons {% endcomment %}
    <div class="slideshow__chevron">
      <span class="prev">
        {% render 'icons', icon: 'slideshow-chevron-prev' -%}
      </span>
      <span class="next">
        {% render 'icons', icon: 'slideshow-chevron-next' -%}
      </span>
    </div>

    {% comment %} indicators {% endcomment %}
    <div class="slideshow__indicators"></div>
  </div>
</slideshow-section>

