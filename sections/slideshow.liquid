{%- style -%}
  .{{ section.id }}.slideshow {
    margin-top: {{ section.settings.space_outside | divided_by: 2 }}px;
    margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}px;
  }

  .{{ section.id }}.slideshow__picture > .media > img {
    height: {{ section.settings.image_height }}px;
  }

  .{{ section.id }}.slideshow > .slideshow__container {
    min-width: {{ section.blocks.size | times: 100 }}%;
  }

  .{{ section.id }}.slideshow__box {
    gap: {{ section.settings.space_between_elements }}rem;
  }

  .slideshow__indicators span.active::after {
    animation: load {{ section.settings.autoplay_delay_time }}s normal forwards;
  }

  @media screen and (min-width: 751px) {
    .{{ section.id }}.slideshow {
      height: {{ section.settings.image_height }}px;
    }

    .{{ section.id }}-text-width {
          width: {{ section.settings.text_width }}%;
    }
   }
{%- endstyle -%}

<slideshow-section
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-delay-time="{{ section.settings.autoplay_delay_time | times: 1000 }}"
>
  <div class="{{ section.id }} slideshow {{ section.settings.section_style }}">
    {% comment %} slides {% endcomment %}
    <div class="slideshow__container">
      {% for block in section.blocks %}
        <div class="slideshow__slide" {{ block.shopify_attributes }}>
          {% comment %} Picture {% endcomment %}
          <div class="{{ section.id }} slideshow__picture">
            {%- if block.settings.image == blank -%}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder' }}
            {%- elsif block.settings.image != blank -%}
              <div class="media">
                <img
                  srcset="{{ block.settings.image | image_url }}"
                  loading="lazy"
                  alt="{{ block.settings.image.alt | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  class="fit"
                >
              </div>
            {%- endif -%}
          </div>
          {% comment %} Picture end {% endcomment %}

          {% comment %} Content {% endcomment %}
          <div class="slideshow__content vertical--{{ section.settings.vertical_position }}">
            <div class="{{ section.id }} slideshow__box container text-alignment--{{ section.settings.text_alignment }} {{ section.id }}-text-width horizontal--{{ section.settings.horizontal_position }}">
              <{{ block.settings.subheading_size }}>
                {{ block.settings.subheading }}
              </{{ block.settings.subheading_size }}>

              <{{ block.settings.heading_size }}>
                {{ block.settings.heading }}
              </{{ block.settings.heading_size }}>

              {{ block.settings.text }}

              <div class="buttons buttons--{{ section.settings.text_alignment }}">
                {%- if block.settings.primary_button_text != blank -%}
                  <a
                    class="button button--{% if block.settings.button_style == "border" %}primary{% else %}secondary{% endif %} {{ block.settings.button_style }}"
                    {% if block.settings.primary_button_link != blank %}
                      href="{{ block.settings.primary_button_link }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.primary_button_text }}
                  </a>
                {%- endif -%}
                {%- if block.settings.secondary_button_text != blank -%}
                  <a
                    class="button button--secondary {{ block.settings.button_style }}"
                    {% if block.settings.secondary_button_link != blank %}
                      href="{{ block.settings.secondary_button_link }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.secondary_button_text }}
                  </a>
                {%- endif -%}
              </div>
            </div>
          </div>
          {% comment %} Content end {% endcomment %}
        </div>
      {% endfor %}
    </div>

    {% comment %} chevrons {% endcomment %}
    <div class="chevrons">
      <span class="prev">
        {% render 'icons', icon: 'chevron-prev' -%}
      </span>
      <span class="next">
        {% render 'icons', icon: 'chevron-next' -%}
      </span>
    </div>

    {% comment %} indicators {% endcomment %}
    <div class="slideshow__indicators"></div>
  </div>
</slideshow-section>

{% schema %}
{
  "name": "Slideshow",
  "class": "section-slideshow",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay_time",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Delay time",
      "default": 4
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 500,
      "max": 1000,
      "step": 100,
      "unit": "px",
      "label": "Height",
      "default": 700
    },
    {
      "type": "header",
      "content": "Text style"
    },
    {
      "type": "select",
      "id": "vertical_position",
      "label": "Text position - Vertical",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "horizontal_position",
      "label": "Text position - Horizonal",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "text_width",
      "label": "Text width",
      "info": "Desktop only",
      "min": 40,
      "max": 90,
      "step": 10,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Section style"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "space_outside",
      "label": "Space outside section",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "default": 0
    },
    {
      "type": "select",
      "id": "section_style",
      "label": "Section width",
      "info": "Desktop only",
      "options": [
        {
          "value": "full-width",
          "label": "Full width"
        },
        {
          "value": "wrapped",
          "label": "Wrapped"
        }
      ],
      "default": "full-width"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading"
        },
        {
          "type": "select",
          "id": "subheading_size",
          "label": "Subeading size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h6"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h2"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
        },
        {
          "type": "text",
          "id": "primary_button_text",
          "label": "Primary button text",
          "default": "Primary button"
        },
        {
          "type": "url",
          "id": "primary_button_link",
          "label": "Primary button link"
        },
        {
          "type": "text",
          "id": "secondary_button_text",
          "label": "Secondary button text",
          "default": "Secondary button"
        },
        {
          "type": "url",
          "id": "secondary_button_link",
          "label": "Secondary button link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button style",
          "options": [
            {
              "value": "border",
              "label": "Style 1"
            },
            {
              "value": " ",
              "label": "Style 2"
            }
          ],
          "default": "border"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
