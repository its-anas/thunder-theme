{%- style -%}
  .{{ section.id }}.faq {
    background-color: {{ section.settings.background_color }};
    margin-top: {{ section.settings.space_outside | divided_by: 2 }}rem;
    margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}rem;
    gap: {{ section.settings.space_between_elements }}rem;
  }

  .{{ section.id }} > .faq__container {

  }

  .{{ section.id }} > .faq__container > .faq__image {
    width: {{ section.settings.image_height | minus: 70 }}px;
    height: {{ section.settings.image_height | minus: 70 }}px;
  }

  .{{ section.id }}  > .faq__container > .faq__content > .faq__tab > .faq__question {
    background-color: {{ section.settings.question_background_color }};
  }

  .{{ section.id }}  > .faq__container > .faq__content > .faq__tab > .faq__answer {
    background-color: {{ section.settings.answer_background_color }};
  }


  @media screen and (min-width: 1025px) {
    .{{ section.id }} > .faq__container {
      width: {{ section.settings.tabs_width }}px;
      max-width: var(--wrapped-content-width);
    }

    .{{ section.id }} > .faq__container > .faq__image {
      width: {{ section.settings.image_height }}px;
      min-width: {{ section.settings.image_height }}px;
      height: {{ section.settings.image_height }}px;
    }
  }
{%- endstyle -%}

<faq-section class="{{ section.id }} faq container {{ section.settings.section_style }}">
  <div class="faq__heading">
    <{{ section.settings.heading_size }}>
      {{ section.settings.heading }}
    </{{ section.settings.heading_size }}>
  </div>
  <div class="faq__container">
    {% if section.settings.show_image %}
      <div class="faq__image media">
        {%- if section.settings.image == blank -%}
          {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder' }}
        {%- elsif section.settings.image != blank -%}
          <img
            srcset="{{ section.settings.image | image_url }}"
            loading="lazy"
            alt="{{ section.settings.image.alt | escape }}"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
            class="{{ section.settings.image_style }}"
          >
        {% endif %}
      </div>
    {% endif %}
    <div class="faq__content">
      {% for block in section.blocks %}
        <div class="faq__tab" {{ block.shopify_attributes }}>
          <div class="faq__question">
            <p class="faq__question-text">{{ block.settings.question }}</p>
            <div class="faq__question-svg">
              <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.5 7L15.5 12L10.5 17" stroke="white" stroke-width="1.5"/>
              </svg>
            </div>
          </div>
          <div class="faq__answer">
            <p>
              {{ block.settings.answer }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</faq-section>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "FAQ"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h6"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show image",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_style",
      "label": "Image style",
      "options": [
        {
          "value": "fit",
          "label": "Fit section"
        },
        {
          "value": "full",
          "label": "Full image"
        }
      ],
      "default": "fit"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    },
    {
      "type": "range",
      "id": "space_outside",
      "label": "Space outside section",
      "min": 0,
      "max": 10,
      "step": 2,
      "unit": "rem",
      "default": 0
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "select",
      "id": "section_style",
      "label": "Section style",
      "info": "Desktop only",
      "options": [
        {
          "value": "full-width",
          "label": "Full width"
        },
        {
          "value": "wrapped",
          "label": "Wrapped"
        }
      ],
      "default": "full-width"
    },
    {
      "type": "header",
      "content": "Q/A settings"
    },
    {
      "type": "range",
      "id": "tabs_width",
      "min": 600,
      "max": 1200,
      "step": 10,
      "unit": "px",
      "label": "Tabs width",
      "default": 1000,
      "info": "Applied to desktop only"
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 150,
      "max": 400,
      "step": 10,
      "unit": "px",
      "label": "Image height",
      "default": 300
    },
    {
      "type": "color",
      "id": "question_background_color",
      "label": "Question background color",
      "default": "#222222"
    },
    {
      "type": "color",
      "id": "answer_background_color",
      "label": "Answer background color",
      "default": "#101010"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Q/A",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "Put your question here"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer",
          "default": "Put the answer here.",
          "info": "Keep the answer short. If the answer is very long it will expand the height of the section."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "blocks": [{ "type": "text" }, { "type": "text" }, { "type": "text" }, { "type": "text" }, { "type": "text" }]
    }
  ]
}
{% endschema %}
