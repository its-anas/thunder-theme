{% schema %}
{
  "name": "Product page",
  "class": "page-product",
  "settings": [
    {
      "type": "checkbox",
      "id": "thumbnails_on_mobile",
      "label": "Show product thumbnails on mobile instead of indicators",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 400,
      "step": 10,
      "unit": "px",
      "default": 180
    },
