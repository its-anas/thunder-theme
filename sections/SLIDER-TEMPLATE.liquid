{{ 'SLIDER-SECTIONTEMPLATE.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @media screen and (max-width: 350px) {
    .SECTIONNAME .item {
      width: 65px;
      max-width: 65px;
      min-width: 65px;
    }
  }
  @media screen and (min-width: 350px) and (max-width: 750px) {
    .SECTIONNAME .item {
      width: 100px;
      max-width: 100px;
      min-width: 100px;
    }
  }
  @media screen and (min-width: 750px) and (max-width: 1024px) {
    .SECTIONNAME .item {
      width: 100px;
      max-width: 100px;
      min-width: 100px;
    }
  }
  @media screen and (min-width: 1024px) {
    .SECTIONNAME .item {
      width: 100px;
      max-width: 100px;
      min-width: 100px;
    }
  }
{%- endstyle -%}

<slider-section
  data-desktop-items="6"
  data-tablet-items="5"
  data-mobile-items="3"
  class="{{ section.id }} SECTIONNAME {% if section.settings.section_width == "wrapped" %}wrapped{% else %}{% endif %}"
>
  <div class="slider-component">
    <div class="prev">
      {% render 'icons', icon: 'chevron-prev' -%}
    </div>
    <div class="slides-container">
      <div class="slide">
        {% for block in section.blocks %}
          <div class="item" {{ block.shopify_attributes }}></div>
        {% endfor %}
      </div>
    </div>
    <div class="next">
      {% render 'icons', icon: 'chevron-next' -%}
    </div>
  </div>
</slider-section>

{% schema %}
{
  "name": "SECTIONTEMPLATE",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "SECTIONTEMPLATE",
      "blocks": []
    }
  ]
}
{% endschema %}
