{{ 'SLIDER-TEMPLATE.css' | asset_url | stylesheet_tag }}

{%- style -%}
{%- endstyle -%}

<slider-section
  data-desktop-items="6"
  data-tablet-items="5"
  data-mobile-items="3"
  class="{{ section.id }} SECTIONNAME {% if section.settings.section_width == "wrapped" %}wrapped{% else %}{% endif %}"
>
  <div class="slider-component">
    <div class="prev">
      {% render 'icons', icon: 'chevron-prev' -%}
    </div>
    <div class="slides-container">
      <div class="slide">
        {% for block in section.blocks %}
          <div class="item"></div>
        {% endfor %}
      </div>
    </div>
    <div class="next">
      {% render 'icons', icon: 'chevron-next' -%}
    </div>
  </div>
</slider-section>

{% schema %}
{
  "name": "TEMPLATE",
  "settings": [],
  "blocks": [],
  "presets": [
    {
      "name": "TEMPLATE",
      "blocks": []
    }
  ]
}
{% endschema %}
