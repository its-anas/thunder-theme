      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.section_settings.bottom_space",
      "default": 0
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.general.color.text_color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.general.color.background_color",
      "default": "#fcdb33"
    }
  ],
  "presets": [
    {
      "name": "t:sections.section-promotional-banner.name"
    }
  ]
}
{% endschema %}
