      "id": "style_2_button_url",
      "label": "t:sections.general.button.button_url"
    },
    {
      "type": "header",
      "content": "t:sections.general.header.section"
    },
    {
      "type": "range",
      "id": "height",
      "min": 80,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "t:sections.general.size.height",
      "default": 100
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
