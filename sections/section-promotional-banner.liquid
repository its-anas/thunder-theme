{{ 'section-promotional-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .{{ section.id }}.promotional-banner {
    background: {{ section.settings.background_color }};
    min-height: {{ section.settings.height }}px;
  }
  .{{ section.id }}.promotional-banner {
    margin-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .{{ section.id }}.promotional-banner {
      margin-top: {{ section.settings.top_space }}px;
      margin-bottom: {{ section.settings.bottom_space }}px;
    }
  }
  .{{ section.id }}.promotional-banner__content--style-1 {
    animation: banner-scroll {{ section.settings.animation_speed }}s linear infinite;
  }
  .{{ section.id }}.promotional-banner__content--style-2 *, .{{ section.id }}.promotional-banner__content--style-1 * {
    color: {{ section.settings.text_color }};
  }
{%- endstyle -%}

<section>
  <div class="{{ section.id }} promotional-banner">
    {% if section.settings.banner_style == 'style-1' %}
      {% if section.settings.style_1_text != blank %}
        <div class="{{ section.id }} promotional-banner__content--style-1">
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
        </div>
        <div class="{{ section.id }} promotional-banner__content--style-1">
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
        </div>
      {% endif %}
    {% elsif section.settings.banner_style == 'style-2' %}
      <div class="{{ section.id }} promotional-banner__content--style-2">
        {% if section.settings.style_2_heading != blank %}
          <{{ section.settings.style_2_heading_type }}>
            {{- section.settings.style_2_heading -}}
          </{{ section.settings.style_2_heading_type }}>
        {% endif %}
        {% if section.settings.style_2_text != blank %}
          <p>
            {{ section.settings.style_2_text }}
          </p>
        {% endif %}
        {% if section.settings.style_2_button_text != blank %}
          <a class="button--link">
            {{ section.settings.style_2_button_text -}}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Promotional banner",
  "class": "section-promotional-banner",
  "settings": [
    {
      "type": "select",
      "id": "banner_style",
      "label": "Banner style",
      "options": [
        {
          "value": "style-1",
          "label": "Style 1"
        },
        {
          "value": "style-2",
          "label": "Style 2"
        }
      ],
      "default": "style-1"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fcdb33"
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom space",
      "default": 0
    },
    {
      "type": "range",
      "id": "height",
      "min": 80,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Section height",
      "default": 100
    },
    {
      "type": "header",
      "content": "Style 1 settings",
      "info": "Applied only if 'Style 1' is selected"
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 10,
      "max": 60,
      "step": 1,
      "unit": "sec",
      "label": "Animation speed",
      "default": 60
    },
    {
      "type": "text",
      "id": "style_1_text",
      "label": "Text",
      "default": "Put the banner text here"
    },
    {
      "type": "select",
      "id": "style_1_text_type",
      "label": "Text type",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        },
        {
          "value": "p",
          "label": "Text"
        }
      ],
      "default": "h3"
    },
    {
      "type": "header",
      "content": "Style 2 settings",
      "info": "Applied only if 'Style 2' is selected"
    },
    {
      "type": "text",
      "id": "style_2_heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "select",
      "id": "style_2_heading_type",
      "label": "heading type",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h6"
    },
    {
      "type": "text",
      "id": "style_2_text",
      "label": "Text",
      "default": "Put the banner text here"
    },
    {
      "type": "text",
      "id": "style_2_button_text",
      "label": "Button text",
      "default": "Primary button"
    },
    {
      "type": "url",
      "id": "style_2_button_url",
      "label": "Button url"
    }
  ],
  "presets": [
    {
      "name": "Promotional banner"
    }
  ]
}
{% endschema %}
