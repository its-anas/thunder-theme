{{ 'section-promotional-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .{{ section.id }}.promotional-banner {
    background: {{ section.settings.background_color }};
    min-height: {{ section.settings.height }}px;
  }
  .{{ section.id }}.promotional-banner {
    margin-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .{{ section.id }}.promotional-banner {
      margin-top: {{ section.settings.top_space }}px;
      margin-bottom: {{ section.settings.bottom_space }}px;
    }
  }
  .{{ section.id }}.promotional-banner__content--style-1 {
    animation: banner-scroll {{ section.settings.animation_speed }}s linear infinite;
    -webkit-animation: banner-scroll {{ section.settings.animation_speed }}s linear infinite;
  }
  .{{ section.id }}.promotional-banner__content--style-2 *, .{{ section.id }}.promotional-banner__content--style-1 * {
    color: {{ section.settings.text_color }};
  }
{%- endstyle -%}

<section>
  <div reveal-on-scroll class="{{ section.id }} promotional-banner">
    {% if section.settings.banner_style == 'style-1' %}
      {% if section.settings.style_1_text != blank %}
        <div class="{{ section.id }} promotional-banner__content--style-1">
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
        </div>
        <div class="{{ section.id }} promotional-banner__content--style-1">
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
          <{{ section.settings.style_1_text_type }}>
            {{- section.settings.style_1_text -}}
          </{{ section.settings.style_1_text_type }}>
        </div>
      {% endif %}
    {% elsif section.settings.banner_style == 'style-2' %}
      <div class="{{ section.id }} promotional-banner__content--style-2">
        {% if section.settings.style_2_text != blank %}
          <span>
            {{- section.settings.style_2_text -}}
          </span>
        {% endif %}
        {% if section.settings.style_2_button_text != blank %}
          <a class="button--link">
            {{ section.settings.style_2_button_text -}}
          </a>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "t:sections.section-promotional-banner.name",
  "class": "section-promotional-banner",
  "settings": [
    {
      "type": "select",
      "id": "banner_style",
      "label": "t:sections.section-promotional-banner.settings.banner_style.label",
      "options": [
        {
          "value": "style-1",
          "label": "t:sections.section-promotional-banner.settings.banner_style.options.style-1"
        },
        {
          "value": "style-2",
          "label": "t:sections.section-promotional-banner.settings.banner_style.options.style-2"
        }
      ],
      "default": "style-1"
    },
    {
      "type": "header",
      "content": "t:sections.section-promotional-banner.settings.banner_style.options.style-1",
      "info": "t:sections.section-promotional-banner.settings.banner_style.options.style-1_info"
    },
    {
      "type": "text",
      "id": "style_1_text",
      "label": "t:sections.general.section_settings.heading",
      "default": "A brief summary of the offer with a sense of urgency!"
