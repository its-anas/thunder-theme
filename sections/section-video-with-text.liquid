{{ 'section-video-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .{{ section.id }}.video-with-text__container  {
      background-color: {{ section.settings.background_color }};
   }

  .{{ section.id }}.video-with-text__container  {
    margin-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}.video-with-text__container  {
      margin-top: {{ section.settings.top_space }}px;
      margin-bottom: {{ section.settings.bottom_space }}px;
    }
  }

  .{{ section.id }}.video-with-text {
      min-height: {{ section.settings.video_height }}px;
      margin: 0 auto;
      width: var(--page-width);
      max-width: 100%;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }} .video-with-text__media .video-with-text__video-box {
        width: {{ section.settings.video_height | times: 0.75 | round: 0 }}px;
        aspect-ratio: 1;
    }
  }

    @media screen and (min-width: 1024px) {
    .{{ section.id }} .video-with-text__media .video-with-text__video-box {
        width: {{ section.settings.video_height }}px;
    }
  }

  .{{ section.id }}.video-with-text .video-with-text__content .video-with-text__box {
    gap: {{ section.settings.space_between_elements }}rem;
  }

  @media screen and (min-width: 1024px) {
      .text-width-{{ section.id }} {
        width: {{ section.settings.text_width }}%;
      }
  }
{%- endstyle -%}

<div class="{{ section.id }} video-with-text__container">
  <video-with-text reveal-on-scroll class="{{ section.id }} video-with-text {{ section.settings.video_placement }}">
    <div class="video-with-text__media">
      <div class="video-with-text__video-box horizontal--{{ section.settings.video_horizontal_position }}">
        <div class="video-with-text__video media">
          <iframe
            src="https://www.youtube.com/embed/{{ section.settings.video_url.id }}?enablejsapi&mute>"
            class="video"
            allow="autoplay; encrypted-media"
            title="Title"
            frameborder="0"
          ></iframe>
        </div>
        <div class="video-with-text__thumbnail media">
          <a id="play-icon" class="icon">
            {% render 'snippet-icons', icon: 'play-icon' -%}
          </a>
          {% if section.settings.thumbnail == blank %}
            {{ 'collection-2' | placeholder_svg_tag: 'placeholder' }}
          {% else %}
            {%- assign image = section.settings.thumbnail -%}
            {%- assign sizes = '(min-width: 1024px) calc(var(--page-width) / 2), (min-width: 750px) calc(100vw / 2), 100vw' -%}
            {%- assign widths = '250, 275, 300, 325, 350, 375, 400, 425, 450, 474, 500' -%}
            {%- assign width = '500' -%}
            {{
              image
              | image_url: width: width
              | image_tag:
                loading: 'lazy',
                class: 'cover',
                alt: image.alt,
                width: image.width,
                height: image.height,
                sizes: sizes,
                widths: widths
            }}
          {% endif %}
        </div>
      </div>
    </div>
    <div class="video-with-text__content">
      <div class="video-with-text__box horizontal--{{ section.settings.text_horizontal_position }} vertical--center text-alignment--{{ section.settings.text_alignment }} text-width-{{ section.id }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'subheading' -%}
              <{{ block.settings.subheading_size }} {{ block.shopify_attributes }}>
                {{ block.settings.subheading }}
              </{{ block.settings.subheading_size }}>
            {%- when 'heading' -%}
              <{{ block.settings.heading_size }} {{ block.shopify_attributes }}>
                {{ block.settings.heading }}
              </{{ block.settings.heading_size }}>
            {%- when 'text' -%}
              <div {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
            {%- when 'button' -%}
              <div class="buttons buttons--{{ section.settings.text_alignment }}" {{ block.shopify_attributes }}>
                {% if block.settings.primary_button_text != blank %}
                  <a
                    class="button button--primary border"
                    {% if block.settings.secondary_button_link != blank %}
                      href="{{ block.settings.primary_button_link }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.primary_button_text }}
                  </a>
                {% endif %}
                {% if block.settings.secondary_button_text != blank %}
                  <a
                    class="button button--secondary border"
                    {% if block.settings.secondary_button_link != blank %}
                      href="{{ block.settings.secondary_button_link }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.secondary_button_text }}
                  </a>
                {% endif %}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </video-with-text>
</div>

{% schema %}
{
  "name": "Video with text",
  "class": "section-video-with-text",
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": ["youtube"],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "URL"
    },
    {
      "type": "range",
      "id": "video_height",
      "min": 350,
      "max": 450,
      "step": 10,
      "unit": "px",
      "label": "Height/width",
      "default": 400
    },
    {
      "type": "select",
      "id": "video_horizontal_position",
      "label": "Position",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "select",
      "id": "video_placement",
      "label": "Placement",
      "options": [
        {
          "value": "first",
          "label": "Video first"
        },
        {
          "value": "second",
          "label": "Video second"
        }
      ],
      "default": "first"
    },
    {
      "type": "image_picker",
      "id": "thumbnail",
      "label": "Thumbnail"
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignment",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "text_horizontal_position",
      "label": "Position",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "text_width",
      "label": "Width",
      "info": "Desktop only",
      "min": 70,
      "max": 100,
      "step": 10,
      "unit": "%",
      "default": 70
    },
    {
      "type": "header",
      "content": "Section"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom space",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent",
      "info": "Applied only if 'type' is 'color'"
    }
  ],
  "blocks": [
    {
      "type": "subheading",
      "name": "Subheading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading"
        },
        {
          "type": "select",
          "id": "subheading_size",
          "label": "Subeading size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h6"
        }
      ]
    },
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h2"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "primary_button_text",
          "label": "Primary button text",
          "default": "Primary button"
        },
        {
          "type": "url",
          "id": "primary_button_link",
          "label": "Primary button link"
        },
        {
          "type": "text",
          "id": "secondary_button_text",
          "label": "Secondary button text",
          "default": "Secondary button"
        },
        {
          "type": "url",
          "id": "secondary_button_link",
          "label": "Secondary button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Video with text",
      "blocks": [
        {
          "type": "subheading"
        },
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
