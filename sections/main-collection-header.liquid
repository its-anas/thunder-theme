{% style %}
    .collection__header {
        display: grid;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .collection__header__image,
    .collection__header__title {
        grid-column: 1;
        grid-row: 1;
        width: 100%;
        height: 100%;
        position: absolute;
        overflow: hidden;
    }

    .collection__header__title {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        z-index: 2;
    }
    .collection__header, .collection__header__title, .collection__header__image {
      height: {{ section.settings.section_height }}px;
    }
  {% if collection.featured_image != blank and section.settings.show_collection_image == true %}
    .collection__header * {
      color: {{ section.settings.text_color }};
    }
  {% else %}
    .collection__header {
      margin-top: 130px;
    }
    .collection__header, .collection__header__title, .collection__header__image {
      height: 200px;
    }
  {% endif %}
{% endstyle %}

<div reveal-on-scroll class="collection__header">
  <div class="collection__header__title">
    <h2 class="collection__title">{{ collection.title }}</h2>
    <p>{{ collection.description }}</p>
  </div>
  {% if collection.featured_image != blank and section.settings.show_collection_image == true %}
    <div class="collection__header__image media">
      {%- assign image = collection.featured_image -%}
      {%- assign sizes = '100vw' -%}
      {%- assign widths = '350, 500, 750, 1000, 1250, 1500, 1750, 2000, 2500, 3000, 3500, 3750' -%}
      {%- assign width = '3750' -%}
      {{
        image
        | image_url: width: width
        | image_tag:
          loading: 'lazy',
          class: 'cover',
          alt: image.alt,
          width: image.width,
          height: image.height,
          sizes: sizes,
          widths: widths
      }}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection header",
  "class": "main-collection-header",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 300,
      "max": 1000,
      "step": 100,
      "unit": "px",
      "label": "Section height",
      "default": 600
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Show collection image",
      "default": true
    }
  ]
}
{% endschema %}
