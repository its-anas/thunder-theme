{{ 'rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .{{ section.id }}  {
      margin-top: {{ section.settings.space_outside | divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}px;
   }

   .{{ section.id }}-just-color {
    background-color: {{ section.settings.background_color }};
   }

   .{{ section.id }}-image {
       {% if section.settings.section_width == "wrapped" %}
            background-image: url({{ section.settings.background_image | image_url: width: settings.wrapped_content_width }});
            background-repeat: no-repeat;
       {% endif %}
       {% if section.settings.section_width == "full-width" %}
            background-image: url({{ section.settings.background_image | image_url }});
            background-size: cover;
       {% endif %}
       background-position: center;
   }

   .{{ section.id }}-space-between {
        gap: {{ section.settings.space_between }}px;
   }

   @media screen and (min-width: 750px) {
        .{{ section.id }}-text-width {
              width: {{ section.settings.text_width }}%;
        }
   }

   .{{ section.id }}.scrolling-words-box > ul {
    animation: scrollUp 8s infinite;
   }

  {%- comment -%}
   {% if section.settings.words_count == "2" %}
    @keyframes scrollUp {
      15%, 25% {
        transform: translateY(-20%);
      }
      90%, 100% {
        transform: translateY(-80%);
      }
    }
   {% elsif section.settings.words_count == "3" %}
    @keyframes scrollUp {
      15%, 25% {
        transform: translateY(-20%);
      }
      40%, 50% {
        transform: translateY(-40%);
      }
      90%, 100% {
        transform: translateY(-80%);
      }
    }
   {% elsif section.settings.words_count == "4" %}
   @keyframes scrollUp {
      15%, 25% {
        transform: translateY(-20%);
      }
      40%, 50% {
        transform: translateY(-40%);
      }
      65%, 75% {
        transform: translateY(-60%);
      }
      90%, 100% {
        transform: translateY(-80%);
      }
    }
   {% endif %}
   {%- endcomment -%}
{%- endstyle -%}

<section class="{{ section.id }} {% if section.settings.background_image == blank %}{{ section.id }}-just-color{% else %}{{ section.id }}-{{ section.settings.background_type }}{% endif %} {{ section.settings.section_width }}">
  <div class="wrapper container {{ section.id }}-space-between text-alignment-{{ section.settings.text_alignment }} {{ section.id }}-text-width horizontal--{{ section.settings.horizontal_position }}">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'subheading' -%}
          <{{ block.settings.subheading_size }}>
            {{ block.settings.subheading }}
          </{{ block.settings.subheading_size }}>
        {%- when 'heading' -%}
          {% if block.settings.animated %}
            <div class="scrolling-words-container {{ section.settings.text_alignment }} {{ block.settings.animation_placement }}">
              <div class="{{ section.id }} scrolling-words-box {{ block.settings.heading_size }}">
                <ul>
                  <{{ block.settings.heading_size }} style="color: {{ block.settings.word_1_color }}">
                    {{- block.settings.word_1 -}}
                  </{{ block.settings.heading_size }}>
                  <{{ block.settings.heading_size }} style="color: {{ block.settings.word_2_color }}">
                    {{- block.settings.word_2 -}}
                  </{{ block.settings.heading_size }}>
                  <{{ block.settings.heading_size }} style="color: {{ block.settings.word_3_color }}">
                    {{- block.settings.word_3 -}}
                  </{{ block.settings.heading_size }}>
                  <{{ block.settings.heading_size }} style="color: {{ block.settings.word_4_color }}">
                    {{- block.settings.word_4 -}}
                  </{{ block.settings.heading_size }}>
                  <{{ block.settings.heading_size }} style="color: {{ block.settings.word_1_color }}">
                    {{- block.settings.word_1 -}}
                  </{{ block.settings.heading_size }}>
                </ul>
              </div>

              <span>
                <{{ block.settings.heading_size }}>
                  {{ block.settings.heading }}
                </{{ block.settings.heading_size }}>
              </span>
            </div>
          {% else %}
            <{{ block.settings.heading_size }}>
              {{ block.settings.heading }}
            </{{ block.settings.heading_size }}>
          {% endif %}
        {%- when 'text' -%}
          {{ block.settings.text }}
        {%- when 'button' -%}
          <div class="buttons buttons--{{ section.settings.text_alignment }}">
            {% if block.settings.primary_button_text != blank %}
              <a
                class="button button--{% if block.settings.button_style == "border" %}primary{% else %}secondary{% endif %} {{ block.settings.button_style }}"
                href="{{ block.settings.primary_button_link }}"
              >
                <span></span> <span></span> <span></span> <span></span>
                {{ block.settings.primary_button_text }}
              </a>
            {% endif %}
            {% if block.settings.secondary_button_text != blank %}
              <a
                class="button button--secondary {{ block.settings.button_style }}"
                href="{{ block.settings.secondary_button_link }}"
              >
                <span></span> <span></span> <span></span> <span></span>
                {{ block.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>
      {%- endcase -%}
    {%- endfor -%}
  </div>
</section>

