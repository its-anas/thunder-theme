{{ 'main-popup.css' | asset_url | stylesheet_tag }}

{%- style -%}
  {% if section.settings.show_image == true and section.settings.image != blank %}
    @media screen and (max-width: 1024px) {
      .popup__content::before {
        background-image: url({{ section.settings.image | image_url }});
      }
    }
  {% endif %}

  .popup__content {
    background-color: {{ section.settings.background_color }};
  }

  {% if settings.global_border_width > 0 %}
    .popup__container.border {
      border: {{ settings.global_border_width }}px solid {{ settings.global_border_color }} ;
      border-radius: var(--global-border-radius);
      background-color: {{ section.settings.background_color }};
      overflow: hidden;
    }
  {% endif %}
{%- endstyle -%}

{% if section.settings.enable_popup == true %}
  <popup-component>
    <div class="popup">
      <div
        openable
        data-delay-time="{{ section.settings.delay_time | times: 1000 }}"
        class="popup__container media hidden"
      >
        {% if section.settings.show_image == true and section.settings.image != blank %}
          <div class="popup__picture">
            {% render 'snippet-image'; image: section.settings.image, style: 'fit' %}
          </div>
        {% endif %}
        <div class="popup__content">
          <div class="popup__close"></div>
          <div class="newsletter container">
            {% if section.settings.heading != blank %}
              <div class="newsletter__heading">
                <h6>
                  {{ section.settings.heading }}
                </h6>
              </div>
            {% endif %}
            {% if section.settings.text != blank %}
              <p class="newsletter__text">{{ section.settings.text }}</p>
            {% endif %}

            {% form 'customer', class: 'newsletter__form' %}
              <div class="newsletter__container">
                <input
                  type="email"
                  name="contact[email]"
                  class="newsletter__input"
                  value="{{ form.email }}"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  placeholder="Type your email address"
                  required
                >
                <button
                  type="submit"
                  class="newsletter__button"
                  name="commit"
                  id="subscribe"
                >
                  <p class="button">SUBSCRIBE</p>
                  <p></p>
                </button>
              </div>
              <div class="form__messages">
                {%- if form.errors -%}
                  <div class="form__messages__error">
                    <span>⚠</span>
                    <span>{{ form.errors.translated_fields.email | capitalize }}</span>
                    <span>{{ form.errors.messages.email }}</span>
                  </div>
                {%- endif -%}
                {%- if form.posted_successfully? -%}
                  <div class="form__messages__success">
                    <span>✓ Subscription confirmed</span>
                  </div>
                {%- endif -%}
              </div>
            {%- endform -%}
            {% if section.settings.show_social_media_icons == true %}
              <div class="popup__social-media">
                {% render 'snippet-social-media-icons' %}
              </div>
            {% endif %}

            <span class="popup__link underline secondary-text">{{ section.settings.reject_text }}</span>
          </div>
        </div>
      </div>
    </div>
  </popup-component>
{% endif %}

{% schema %}
{
  "name": "Popup",
  "class": "main-popup",
  "settings": [
    {
      "type": "header",
      "content": "Settings",
      "info": "Once the customer closes the popup, it will not show up again until next time they visit your store. The popup cookie expires when the browser session ends.)"
    },
    {
      "type": "checkbox",
      "id": "enable_popup",
      "label": "Enable popup",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_social_media_icons",
      "label": "Show social media icons",
      "default": true,
      "info": "Icons will be shown only if you have added at least one social media link in the theme settings."
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "label": "Show image",
      "default": true
    },
    {
      "type": "range",
      "id": "delay_time",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Delay time",
      "default": 5
    },
    {
      "type": "header",
      "content": "Text"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "GET 10% OFF"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "Subscribe to our newsletter and we will send you a 10% discount code towards your first purchase."
    },
    {
      "type": "text",
      "id": "reject_text",
      "label": "Rejectal text",
      "default": "No thanks, I prefer to pay full price"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#222"
    }
  ]
}
{% endschema %}
