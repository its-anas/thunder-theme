{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .{{ section.id }}.slideshow {
    margin-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}.slideshow {
      margin-top: {{ section.settings.top_space }}px;
      margin-bottom: {{ section.settings.bottom_space }}px;
    }
  }

  {% if section.settings.full_screen_height %}
    .{{ section.id }}.slideshow {
      height: 101vh;
    }
  {% else %}
    .{{ section.id }}.slideshow {
      height: {{ section.settings.mobile_image_height }}px;
    }

    @media screen and (min-width: 750px) and (max-width: 1024px) {
      .{{ section.id }}.image-with-text {
          height: {{ section.settings.image_height | times: 0.75 | round: 0 }}px;
      }
    }

    @media screen and (min-width: 1024px) {
      .{{ section.id }}.slideshow {
        height: {{ section.settings.image_height }}px;
      }
    }
  {% endif %}

  .{{ section.id }} .slideshow__content {
    background: rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .{{ section.id }}.slideshow__picture > .media > img {
    height: {{ section.settings.image_height }}px;
  }

  .{{ section.id }}.slideshow > .slideshow__container {
    min-width: {{ section.blocks.size | times: 100 }}%;
  }

  .{{ section.id }}.slideshow__box {
    gap: {{ section.settings.space_between_elements }}rem;
  }

  .{{ section.id }}.slideshow__box > * {
    color: {{ section.settings.text_color }};
  }

  .slideshow__indicators span.active::after {
    animation: load {{ section.settings.autoplay_delay_time }}s normal forwards;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}-text-width {
          width: {{ section.settings.text_width }}%;
    }
   }
{%- endstyle -%}

<slideshow-section
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-delay-time="{{ section.settings.autoplay_delay_time | times: 1000 }}"
>
  <div reveal-on-scroll class="{{ section.id }} slideshow">
    <div class="slideshow__container">
      {% for block in section.blocks %}
        <div class="slideshow__slide" {{ block.shopify_attributes }}>
          <div class="{{ section.id }} slideshow__picture">
            {%- if block.settings.image == blank -%}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder' }}
            {%- elsif block.settings.image != blank -%}
              <div class="media">
                {%- assign image = block.settings.image -%}
                {%- assign sizes = '100vw' -%}
                {%- assign widths = '350, 500, 750, 1000, 1250, 1500, 1750, 2000, 2500, 3000, 3500, 3750' -%}
                {{
                  image
                  | image_url: width: 3750
                  | image_tag:
                    loading: 'lazy',
                    class: 'cover',
                    alt: image.alt,
                    width: image.width,
                    height: image.height,
                    sizes: sizes,
                    widths: widths
                }}
              </div>
            {%- endif -%}
          </div>

          <div class="slideshow__content vertical--{{ section.settings.vertical_position }}">
            <div class="{{ section.id }} slideshow__box container text-alignment--{{ section.settings.text_alignment }} {{ section.id }}-text-width horizontal--{{ section.settings.horizontal_position }}">
              <{{ block.settings.subheading_size }}>
                {{ block.settings.subheading }}
              </{{ block.settings.subheading_size }}>

              <{{ block.settings.heading_size }}>
                {{ block.settings.heading }}
              </{{ block.settings.heading_size }}>

              {{ block.settings.text }}

              <div class="buttons buttons--{{ section.settings.text_alignment }}">
                {% if block.settings.primary_button_text != blank %}
                  <a
                    class="button button--primary border"
                    {% if block.settings.secondary_button_url != blank %}
                      href="{{ block.settings.primary_button_url }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.primary_button_text }}
                  </a>
                {% endif %}
                {% if block.settings.secondary_button_text != blank %}
                  <a
                    class="button button--secondary border"
                    {% if block.settings.secondary_button_url != blank %}
                      href="{{ block.settings.secondary_button_url }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.secondary_button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="chevrons">
      <span class="prev">
        {% render 'snippet-icons', icon: 'chevron-prev' -%}
      </span>
      <span class="next">
        {% render 'snippet-icons', icon: 'chevron-next' -%}
      </span>
    </div>

    <div class="slideshow__indicators"></div>
  </div>
</slideshow-section>

{% schema %}
{
  "name": "t:sections.section-slideshow.name",
  "class": "section-slideshow",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "t:sections.general.enable_autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay_time",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "t:sections.general.autoplay_delay_time",
      "default": 4
    },
    {
      "type": "header",
      "content": "t:sections.general.text"
    },
    {
      "type": "select",
      "id": "vertical_position",
      "label": "t:sections.general.vertical_position",
      "options": [
        {
          "value": "top",
          "label": "t:sections.general.text_position_vertical.options.top"
        },
        {
          "value": "center",
          "label": "t:sections.general.text_position_vertical.options.center"
        },
        {
          "value": "bottom",
          "label": "t:sections.general.text_position_vertical.options.bottom"
        }
      ],
      "default": "bottom"
    },
    {
      "type": "select",
      "id": "horizontal_position",
      "label": "t:sections.general.horizontal_position",
      "info": "t:sections.general.desktop_only",
      "options": [
        {
          "value": "left",
          "label": "t:sections.general.text_position_horizontal.options.left"
        },
        {
          "value": "center",
          "label": "t:sections.general.text_position_horizontal.options.center"
        },
        {
          "value": "right",
          "label": "t:sections.general.text_position_horizontal.options.right"
        }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:sections.general.alignment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.general.text_position_horizontal.options.left"
        },
        {
          "value": "center",
          "label": "t:sections.general.text_position_horizontal.options.center"
        },
        {
          "value": "right",
          "label": "t:sections.general.text_position_horizontal.options.right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "text_width",
      "label": "t:sections.general.width",
      "info": "t:sections.general.desktop_only",
      "min": 40,
      "max": 90,
      "step": 10,
      "unit": "%",
      "default": 50
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.general.color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "t:sections.general.overlay"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 70,
      "step": 1,
      "unit": "%",
      "label": "t:sections.general.opacity",
      "default": 10
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "t:sections.general.color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "t:sections.general.section"
    },
    {
      "type": "checkbox",
      "id": "full_screen_height",
      "label": "t:sections.general.full_screen_height",
      "info": "t:sections.general.full_screen_height_info",
      "default": false
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 600,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "t:sections.general.desktop_height",
      "default": 700
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "min": 400,
      "max": 700,
      "step": 10,
      "unit": "px",
      "label": "t:sections.general.mobile_height",
      "default": 500
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "t:sections.general.space_between_elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.top_space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.bottom_space",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "t:sections.section-slideshow.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.general.image"
        },
        {
          "type": "header",
          "content": "t:sections.general.subheading"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "t:sections.general.text"
        },
        {
          "type": "select",
          "id": "subheading_size",
          "label": "t:sections.general.size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h6"
        },
        {
          "type": "header",
          "content": "t:sections.general.heading"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.general.text",
          "default": "Slide"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "t:sections.general.size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h2"
        },
        {
          "type": "header",
          "content": "t:sections.general.text"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "t:sections.general.text",
          "default": "<p>Provide additional context and background information about the slide, and help customers understand the relevance and importance of the content being presented.</p>"
        },
        {
          "type": "header",
          "content": "t:sections.general.button"
        },
        {
          "type": "text",
          "id": "primary_button_text",
          "label": "t:sections.general.primary_button_text",
          "default": "Primary button"
        },
        {
          "type": "url",
          "id": "primary_button_url",
          "label": "t:sections.general.primary_button_url"
        },
        {
          "type": "text",
          "id": "secondary_button_text",
          "label": "t:sections.general.secondary_button_text",
          "default": "Secondary button"
        },
        {
          "type": "url",
          "id": "secondary_button_url",
          "label": "t:sections.general.secondary_button_url"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.section-slideshow.name",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
