{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .{{ section.id }}.slideshow {
    height: {{ section.settings.mobile_image_height }}px;
  }

  @media screen and (min-width: 750px) and (max-width: 1024px) {
    .{{ section.id }}.image-with-text {
        height: {{ section.settings.image_height | times: 0.75 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1024px) {
    .{{ section.id }}.slideshow {
      height: {{ section.settings.image_height }}px;
    }
  }

  .{{ section.id }}.slideshow {
    margin-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}.slideshow {
      margin-top: {{ section.settings.top_space }}px;
      margin-bottom: {{ section.settings.bottom_space }}px;
    }
  }

  .{{ section.id }} .slideshow__content {
    background: rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .{{ section.id }}.slideshow__picture > .media > img {
    height: {{ section.settings.image_height }}px;
  }

  .{{ section.id }}.slideshow > .slideshow__container {
    min-width: {{ section.blocks.size | times: 100 }}%;
  }

  .{{ section.id }}.slideshow__box {
    gap: {{ section.settings.space_between_elements }}rem;
  }

  .{{ section.id }}.slideshow__box > * {
    color: {{ section.settings.text_color }};
  }

  .slideshow__indicators span.active::after {
    animation: load {{ section.settings.autoplay_delay_time }}s normal forwards;
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}-text-width {
          width: {{ section.settings.text_width }}%;
    }
   }
{%- endstyle -%}

<slideshow-section
  data-autoplay="{{ section.settings.enable_autoplay }}"
  data-delay-time="{{ section.settings.autoplay_delay_time | times: 1000 }}"
>
  <div reveal-on-scroll class="{{ section.id }} slideshow">
    <div class="slideshow__container">
      {% for block in section.blocks %}
        <div class="slideshow__slide" {{ block.shopify_attributes }}>
          <div class="{{ section.id }} slideshow__picture">
            {%- if block.settings.image == blank -%}
              {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder' }}
            {%- elsif block.settings.image != blank -%}
              <div class="media">
                {%- assign image = block.settings.image -%}
                {%- assign sizes = '100vw' -%}
                {%- assign widths = '350, 500, 750, 1000, 1250, 1500, 1750, 2000, 2500, 3000, 3500, 3750' -%}
                {{
                  image
                  | image_url: width: 3750
                  | image_tag:
                    loading: 'lazy',
                    class: 'cover',
                    alt: image.alt,
                    width: image.width,
                    height: image.height,
                    sizes: sizes,
                    widths: widths
                }}
              </div>
            {%- endif -%}
          </div>

          <div class="slideshow__content vertical--{{ section.settings.vertical_position }}">
            <div class="{{ section.id }} slideshow__box container text-alignment--{{ section.settings.text_alignment }} {{ section.id }}-text-width horizontal--{{ section.settings.horizontal_position }}">
              <{{ block.settings.subheading_size }}>
                {{ block.settings.subheading }}
              </{{ block.settings.subheading_size }}>

              <{{ block.settings.heading_size }}>
                {{ block.settings.heading }}
              </{{ block.settings.heading_size }}>

              {{ block.settings.text }}

              <div class="buttons buttons--{{ section.settings.text_alignment }}">
                {% if block.settings.primary_button_text != blank %}
                  <a
                    class="button button--primary border"
                    {% if block.settings.secondary_button_link != blank %}
                      href="{{ block.settings.primary_button_link }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.primary_button_text }}
                  </a>
                {% endif %}
                {% if block.settings.secondary_button_text != blank %}
                  <a
                    class="button button--secondary border"
                    {% if block.settings.secondary_button_link != blank %}
                      href="{{ block.settings.secondary_button_link }}"
                    {% endif %}
                  >
                    <span></span> <span></span> <span></span> <span></span>
                    {{ block.settings.secondary_button_text }}
                  </a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="chevrons">
      <span class="prev">
        {% render 'snippet-icons', icon: 'chevron-prev' -%}
      </span>
      <span class="next">
        {% render 'snippet-icons', icon: 'chevron-next' -%}
      </span>
    </div>

    <div class="slideshow__indicators"></div>
  </div>
</slideshow-section>

{% schema %}
{
  "name": "Slideshow",
  "class": "section-slideshow",
  "settings": [
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 70,
      "step": 1,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 10
    },
    {
      "type": "checkbox",
      "id": "enable_autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_delay_time",
      "min": 3,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Delay time",
      "default": 4
    },
    {
      "type": "range",
      "id": "image_height",
      "min": 600,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Desktop height",
      "default": 700
    },
    {
      "type": "range",
      "id": "mobile_image_height",
      "min": 400,
      "max": 700,
      "step": 10,
      "unit": "px",
      "label": "Mobile height",
      "default": 500
    },
    {
      "type": "header",
      "content": "Text style"
    },
    {
      "type": "select",
      "id": "vertical_position",
      "label": "Text position - Vertical",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "horizontal_position",
      "label": "Text position - Horizonal",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "info": "Desktop only",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "text_width",
      "label": "Text width",
      "info": "Desktop only",
      "min": 40,
      "max": 90,
      "step": 10,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "Section style"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Top space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Bottom space",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Subheading"
        },
        {
          "type": "select",
          "id": "subheading_size",
          "label": "Subeading size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h6"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Heading size",
          "options": [
            {
              "value": "h1",
              "label": "h1"
            },
            {
              "value": "h2",
              "label": "h2"
            },
            {
              "value": "h3",
              "label": "h3"
            },
            {
              "value": "h4",
              "label": "h4"
            },
            {
              "value": "h5",
              "label": "h5"
            },
            {
              "value": "h6",
              "label": "h6"
            }
          ],
          "default": "h2"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>"
        },
        {
          "type": "text",
          "id": "primary_button_text",
          "label": "Primary button text",
          "default": "Primary button"
        },
        {
          "type": "url",
          "id": "primary_button_link",
          "label": "Primary button link"
        },
        {
          "type": "text",
          "id": "secondary_button_text",
          "label": "Secondary button text",
          "default": "Secondary button"
        },
        {
          "type": "url",
          "id": "secondary_button_link",
          "label": "Secondary button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
