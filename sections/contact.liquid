{%- style -%}
  .{{ section.id }}.contact {
      margin-top: {{ section.settings.space_outside_elements| divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside_elements | divided_by: 2 }}px;
      gap: {{ section.settings.space_between_elements }}rem;
   }

   .{{ section.id }}.just-color {
    background-color: {{ section.settings.background_color }};
   }

   .{{ section.id }}.image {
       {% if section.settings.section_style == "wrapped" %}
            background-image: url({{ section.settings.background_image | image_url: width: settings.wrapped_content_width }});
            background-repeat: no-repeat;
       {% else %}
            background-image: url({{ section.settings.background_image | image_url }});
            background-size: cover;
       {% endif %}
       background-position: center;
   }


    @media screen and (min-width: 751px) {
        .{{ section.id }}.contact > .contact__form,.{{ section.id }}.contact > .contact__form  {
            width: {{ section.settings.field_width }}px;
            min-width: {{ section.settings.field_width }}px;
            max-width: {{ section.settings.field_width }}px;
        }
   }
{%- endstyle -%}

<section class="{{ section.id }} contact container {% if section.settings.background_image == blank %}just-color{% else %}{{ section.settings.background_type }}{% endif %} {{ section.settings.section_style }}">
  {% if section.settings.heading != blank %}
    <div class="contact__heading">
      <{{ section.settings.heading_size }}>
        {{ section.settings.heading }}
      </{{ section.settings.heading_size }}>
    </div>
  {% endif %}
  {%- form 'contact', class: 'contact__form' -%}
    <input
      autocomplete="name"
      type="text"
      name="contact[name]"
      value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
      placeholder="Name"
      class="contact__name"
      required
    >

    <input
      autocomplete="email"
      type="email"
      name="contact[email]"
      spellcheck="false"
      autocapitalize="off"
      value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
      required
      class="contact__email"
      placeholder="Email"
    >

    <input
      type="tel"
      autocomplete="tel"
      name="contact[phone]"
      pattern="[0-9\-]*"
      value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
      placeholder="Phone"
      class="contact__phone"
    >

    <textarea
      rows="5"
      name="contact[body]"
      placeholder="Message"
      class="contact__message"
      required
    >
    {{- form.body -}}
    </textarea>

    <button
      type="submit"
      class="contact__button"
    >
      <p class="button">SUBMIT</p>
      <p></p>
    </button>

    {%- if form.errors -%}
      <div class="form__error-list">
        {% for field in form.errors %}
          <p class="form__error">
            ⚠ {{ field | capitalize }}
            {{ form.errors.messages[field] }}
          </p>
        {% endfor %}
      </div>
    {%- endif -%}

    {%- if form.posted_successfully? -%}
      <p
        class="form__success"
        tabindex="-1"
        autofocus
      >
        ✓ Message sent
      </p>
    {%- endif -%}

    {{ 'shopify.online_store.spam_detection.disclaimer_html' | t }}
  {%- endform -%}
</section>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact us"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h6"
    },
    {
      "type": "range",
      "id": "field_width",
      "min": 300,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Field width",
      "default": 450,
      "info": "Desktop and tablet only"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "just-color",
          "label": "Color"
        }
      ],
      "default": "just-color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent",
      "info": "Applied only if Type is 'Color'"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image",
      "info": "Applied only if Type is 'Image'"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "space_outside_elements",
      "label": "Space outside elements",
      "min": 0,
      "max": 200,
      "step": 50,
      "unit": "px",
      "default": 0
    },
    {
      "type": "select",
      "id": "section_style",
      "label": "Section width",
      "default": "full-width",
      "options": [
        {
          "value": "full-width",
          "label": "Full width"
        },
        {
          "value": "wrapped",
          "label": "Wrapped"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}
