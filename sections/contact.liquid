{%- style -%}
  .{{ section.id }}.contact {
      margin-top: {{ section.settings.space_outside | divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}px;
      gap: {{ section.settings.space_between_elements }}rem;
      padding: {{ section.settings.space_outside_elements | divided_by: 2 }}px 0;
   }

   .{{ section.id }}.just-color {
    background-color: {{ section.settings.background_color }};
   }

   .{{ section.id }}.image {
       {% if section.settings.section_width == "wrapped" %}
            background-image: url({{ section.settings.background_image | image_url: width: settings.wrapped_content_width }});
            background-repeat: no-repeat;
       {% else %}
            background-image: url({{ section.settings.background_image | image_url }});
            background-size: cover;
       {% endif %}
       background-position: center;
   }


    @media screen and (min-width: 750px) {
        .{{ section.id }}.contact > .contact__form,.{{ section.id }}.contact > .contact__form > .contact__message  {
            width: {{ section.settings.field_width }}px;
            min-width: {{ section.settings.field_width }}px;
            max-width: {{ section.settings.field_width }}px;
        }
   }
{%- endstyle -%}

<section class="{{ section.id }} contact {% if section.settings.background_image == blank %}just-color{% else %}{{ section.settings.background_type }}{% endif %} {{ section.settings.section_width }}">
  {% if section.settings.heading != blank %}
    <h4 class="contact__heading">{{ section.settings.heading }}</h4>
  {% endif %}
  {%- form 'contact', class: 'contact__form' -%}
    {%- if form.posted_successfully? -%}
      <h6 class="" tabindex="-1">V success</h6>
    {%- elsif form.errors -%}
      <div class="form__message">
        <h6 class="" tabindex="-1">!!! Error</h6>
      </div>
      <ul class="">
        <li>
          <a>
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}
          </a>
        </li>
      </ul>
    {%- endif -%}

    <input
      autocomplete="name"
      type="text"
      name="contact[name]"
      value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
      placeholder="Name"
      class="contact__name"
      required
    >

    <input
      autocomplete="email"
      type="email"
      name="contact[email]"
      spellcheck="false"
      autocapitalize="off"
      value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
      required
      class="contact__email"
      placeholder="Email"
    >

    <input
      type="tel"
      autocomplete="tel"
      name="contact[phone]"
      pattern="[0-9\-]*"
      value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
      placeholder="Phone"
      class="contact__phone"
      required
    >

    <textarea
      rows="5"
      name="contact[body]"
      placeholder="Message"
      class="contact__message"
      required
    >
    {{- form.body -}}
    </textarea>

    <button
      type="submit"
      class="contact__button"
    >
      <p class="button">SUBMIT</p>
      <p></p>
    </button>
  {%- endform -%}
</section>

{% schema %}
{
  "name": "Contact",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Contact us"
    },
    {
      "type": "range",
      "id": "field_width",
      "min": 300,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "Field width",
      "default": 450,
      "info": "Desktop and tablet only"
    },
    {
      "type": "select",
      "id": "background_type",
      "label": "Type",
      "options": [
        {
          "value": "image",
          "label": "Image"
        },
        {
          "value": "just-color",
          "label": "Color"
        }
      ],
      "default": "just-color"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent",
      "info": "Applied only if Type is 'Color'"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Image",
      "info": "Applied only if Type is 'Image'"
    },

    {
      "type": "range",
      "id": "space_between_elements",
      "label": "Space between elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1.5
    },
    {
      "type": "range",
      "id": "space_outside_elements",
      "label": "Space outside elements",
      "min": 100,
      "max": 200,
      "step": 50,
      "unit": "px",
      "default": 100
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "default": " ",
      "options": [
        {
          "value": " ",
          "label": "Full width"
        },
        {
          "value": "wrapped",
          "label": "Wrapped"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact"
    }
  ]
}
{% endschema %}
