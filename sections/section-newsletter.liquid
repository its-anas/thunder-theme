{%- style -%}
  .{{ section.id }}.newsletter {
      gap: {{ section.settings.space_between_elements }}rem;
      background-color: {{ section.settings.background_color }};
   }

  .select {
    margin-top: {{ section.settings.top_space | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ section.settings.bottom_space | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .select {
      margin-top: {{ section.settings.top_space }}px;
      margin-bottom: {{ section.settings.bottom_space }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}.newsletter > .newsletter__form > .newsletter__container, .{{ section.id }}.newsletter .form__messages {
       width: {{ section.settings.field_width }}px;
    }
  }
{%- endstyle -%}

<div reveal-on-scroll class="{{ section.id }} newsletter container">
  {% if section.settings.heading != blank %}
    <div class="newsletter__heading">
      <{{ section.settings.heading_size }}>
        {{ section.settings.heading }}
      </{{ section.settings.heading_size }}>
    </div>
  {% endif %}

  {% if section.settings.text != blank %}
    {{ section.settings.text }}
  {% endif %}

  {% form 'customer', class: 'newsletter__form' %}
    <div class="newsletter__container">
      <input
        id=""
        type="email"
        name="contact[email]"
        class="newsletter__input"
        value="{{ form.email }}"
        autocorrect="off"
        autocapitalize="off"
        autocomplete="email"
        {% if form.errors %}
          autofocus
        {% elsif form.posted_successfully? %}

        {% endif %}
        placeholder="{{ 'general.newsletter.placeholder' | t }}"
        required
      >
      <button
        type="submit"
        class="newsletter__button"
        name="commit"
        id="subscribe"
      >
        <p class="button">{{ 'general.newsletter.button' | t }}</p>
      </button>
    </div>

    <div class="form__messages">
      {%- if form.errors -%}
        <div class="form__messages__error">
          <span>⚠</span>
          <span>{{ form.errors.translated_fields.email | capitalize }}</span>
          <span>{{ form.errors.messages.email }}</span>
        </div>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
        <div class="form__messages__success">
          <span>✓ {{ 'general.newsletter.success_message' | t }}</span>
        </div>
      {%- endif -%}
    </div>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "t:sections.section-newsletter.name",
  "class": "section-newsletter",
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "t:sections.general.text",
      "default": "<p>Encourage customers to sign up for the newsletter and explain the benefits of doing so.</p>"
    },
    {
      "type": "range",
      "id": "field_width",
      "min": 300,
      "max": 600,
      "step": 50,
      "unit": "px",
      "label": "t:sections.general.field_width",
      "default": 450,
      "info": "t:sections.general.desktop_and_tablet_only"
    },
    {
      "type": "header",
      "content": "t:sections.general.section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.general.heading",
      "default": "Newsletter"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.general.heading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h4"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "t:sections.general.space_between_elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.top_space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.bottom_space",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.general.background_color",
      "default": "transparent"
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
