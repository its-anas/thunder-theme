    {
      "type": "range",
      "id": "review_height",
      "min": 150,
      "max": 250,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.height",
      "default": 150
    },
    {
      "type": "range",
      "id": "review_border_width",
      "label": "t:sections.general.border_width",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "px",
      "default": 2
    },
    {
      "type": "color",
      "id": "review_border_color",
      "label": "t:sections.general.border_color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "t:sections.general.animation"
    },
    {
      "type": "checkbox",
      "id": "animated",
      "label": "t:sections.general.activate_animation",
      "default": true
    },
    {
      "type": "range",
      "id": "animation_speed",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "s",
      "label": "t:sections.general.animation_speed",
      "default": 40
    },
    {
      "type": "header",
      "content": "t:sections.general.section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.general.heading",
      "default": "Testimonials"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "t:sections.general.heading_size",
      "options": [
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h4",
          "label": "h4"
        },
        {
          "value": "h5",
          "label": "h5"
        },
        {
          "value": "h6",
          "label": "h6"
        }
      ],
      "default": "h6"
    },
    {
      "type": "range",
      "id": "space_between_elements",
      "label": "t:sections.general.space_between_elements",
      "min": 1,
      "max": 3,
      "step": 0.5,
      "unit": "rem",
      "default": 1
    },
    {
      "type": "range",
      "id": "top_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.top_space",
      "default": 0
    },
    {
      "type": "range",
      "id": "bottom_space",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.general.bottom_space",
      "default": 0
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "t:sections.general.background_color",
      "default": "transparent"
    }
  ],
  "max_blocks": 20,
  "blocks": [
    {
      "type": "text",
      "name": "t:sections.section-testimonials.blocks.review.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "reviewer_picture",
          "label": "t:sections.section-testimonials.blocks.review.settings.reviewer_picture."
        },
        {
          "type": "select",
          "id": "stars_count",
          "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.label",
          "options": [
            {
              "value": "star-0",
              "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.options.star-0"
            },
            {
              "value": "star-1",
              "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.options.star-1"
            },
            {
              "value": "star-2",
              "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.options.star-2"
            },
            {
              "value": "star-3",
              "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.options.star-3"
            },
            {
              "value": "star-4",
              "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.options.star-4"
            },
            {
              "value": "star-5",
              "label": "t:sections.section-testimonials.blocks.review.settings.stars_count.options.star-5"
            }
