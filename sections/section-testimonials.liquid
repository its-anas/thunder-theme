        {
          "type": "text",
          "id": "review_text",
          "label": "t:sections.section-testimonials.blocks.review.name",
          "default": "Put your customer review here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.section-testimonials.name",
      "blocks": [
        {
          "type": "text"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}
