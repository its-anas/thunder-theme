{%- style -%}
    .{{ section.id }}.video-hero {
      margin-top: {{ section.settings.space_outside | divided_by: 2 }}px;
      margin-bottom: {{ section.settings.space_outside | divided_by: 2 }}px;
    }

  .{{ section.id }}.video-hero__box {
    gap: {{ section.settings.space_between }}px;
  }

  .{{ section.id }}.overlay {
      background: rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .{{ section.id }}.video-hero__media {
    width: 100vh;

  }

  @media screen and (min-width: 750px) {
    .{{ section.id }}-text-width {
      width: {{ section.settings.text_width }}%;
    }
    .{{ section.id }}.video-hero__media {
      height: {{ section.settings.video_height }}px;
      width: 100%;
  }
   }

    .video-hero {
    height: 100%;
    width: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
  }
  .video-hero > video {
    width: 100%;
  }
{%- endstyle -%}

<section class="{{ section.id }} video-hero {% if section.settings.section_width == "wrapped" %} wrapped{% endif %}">
  <div class="{{ section.id }} video-hero__media">
    <div class="video-hero">
      {% if section.settings.video_url == blank %}
        <video
          id="video"
          class="video"
          src="https://cdn.shopify.com/videos/c/o/v/e69e4ca2a06b40febbc187a80c979079.mp4"
          autoplay
          muted
          loop
          playsinline
        ></video>
      {% else %}
        <video
          id="video"
          class="video"
          src="{{ section.settings.video_url }}"
          autoplay
          muted
          loop
          playsinline
        ></video>
      {% endif %}
    </div>
  </div>

  <div class="{{ section.id }} video-hero__content container vertical--{{ section.settings.vertical_position }} {% if section.settings.background_style == "full-width" %} overlay {% endif %}">
    <div class="{{ section.id }} video-hero__box text-alignment--{{ section.settings.text_alignment }} {{ section.id }}-text-width horizontal--{{ section.settings.horizontal_position }} {% if section.settings.background_style == "block" %} overlay {% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'subheading' -%}
            <{{ block.settings.subheading_size }}>
              {{ block.settings.subheading }}
            </{{ block.settings.subheading_size }}>
          {%- when 'heading' -%}
            <{{ block.settings.heading_size }}>
              {{ block.settings.heading }}
            </{{ block.settings.heading_size }}>
          {%- when 'text' -%}
            {{ block.settings.text }}
          {%- when 'button' -%}
            <div class="buttons buttons--{{ section.settings.text_alignment }}">
              {%- if block.settings.primary_button_text != blank -%}
                <a
                  class="button button--{% if block.settings.button_style == "border" %}primary{% else %}secondary{% endif %} {{ block.settings.button_style }}"
                  href="{{ block.settings.primary_button_link }}"
                >
                  <span></span> <span></span> <span></span> <span></span>
                  {{ block.settings.primary_button_text }}
                </a>
              {%- endif -%}
              {%- if block.settings.secondary_button_text != blank -%}
                <a
                  class="button button--secondary {{ block.settings.button_style }}"
                  href="{{ block.settings.secondary_button_link }}"
                >
                  <span></span> <span></span> <span></span> <span></span>
                  {{ block.settings.secondary_button_text }}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

