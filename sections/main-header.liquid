                      | downcase
                      | remove: ' '
                      | remove: '\'
                      | remove: '!'
                      | remove: '@'
                      | remove: '£'
                      | remove: '$'
                      | remove: '%'
                      | remove: '^'
                      | remove: '&'
                      | remove: '*'
                      | remove: '('
                      | remove: ')'
                      | remove: '-'
                      | remove: '+'
                      | remove: '='
                      | remove: '{'
                      | remove: '}'
                      | remove: ':'
                      | remove: '|'
                      | remove: '\'
                      | remove: '<'
                      | remove: '>'
                      | remove: ','
                      | remove: '.'
                      | remove: '?'
                      | remove: '~'
                      | remove: '`'
                      | remove: '\'
                      | remove: '/'
                    -%}
                    <div class="menu-mobile__parent {{ menu_parent_title }}">
                      <div class="menu-mobile__parent-title {{ menu_parent_title }}">
                        <h6>
                          <a
                            {% if menu_parent.links.size == 0 %}
                              href="{{ menu_parent.url }}"
                            {% endif %}
                          >
                            {{- menu_parent.title -}}
                          </a>
                        </h6>
                        {% if menu_parent.links.size > 0 %}
                          <div class="svg">
                            <svg
                              width="8"
                              height="5"
                              viewBox="0 0 8 5"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path d="M1 1L4.25787 3.25787L7.51575 1" stroke="white" stroke-width="1.5"/>
                            </svg>
                          </div>
                        {% endif %}
                      </div>
                      <div class="menu-mobile__parent-childs menu-mobile__parent-childs--active {% if menu_parent.links.size > 0 %}border{% endif %}">
                        {% for menu_child in menu_parent.links %}
                          {% assign menu_child_title = menu_child.title
                            | downcase
                            | remove: ' '
                            | remove: '\'
                            | remove: '!'
                            | remove: '@'
                            | remove: '£'
                            | remove: '$'
                            | remove: '%'
                            | remove: '^'
                            | remove: '&'
                            | remove: '*'
                            | remove: '('
                            | remove: ')'
                            | remove: '-'
                            | remove: '+'
                            | remove: '='
                            | remove: '{'
                            | remove: '}'
                            | remove: ':'
                            | remove: '|'
                            | remove: '\'
                            | remove: '<'
                            | remove: '>'
                            | remove: ','
                            | remove: '.'
                            | remove: '?'
                            | remove: '~'
                            | remove: '`'
                            | remove: '\'
                            | remove: '/'
                          -%}

                          <div class="menu-mobile__child">
                            <div class="menu-mobile__child-title {{ menu_child_title }}">
                              {% for block in section.blocks %}
                                {% if block.settings.tab_title == menu_child.title %}
                                  <div class="menu__child-icon media">
                                    {% style %}
                                      .menu-mobile__child-title.{{ menu_child_title }} {
                                        padding: 0rem 0.7rem 0rem 0.7rem;
                                      }
                                    {% endstyle %}
                                    {% if block.settings.tab_icon_type == 'svg' %}
                                      {% if block.settings.tab_icon_svg == blank %}
                                        {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
                                      {% else %}
                                        {{ block.settings.tab_icon_svg }}
                                      {% endif %}
                                    {% elsif block.settings.tab_icon_type == 'image' %}
                                      {% if block.settings.tab_icon_image == blank %}
                                        {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
                                      {% else %}
                                        <img
                                          srcset="{{ block.settings.tab_icon_image | image_url }}"
                                          loading="lazy"
                                          alt="{{ block.settings.tab_icon_image | escape }}"
                                          width="{{ block.settings.tab_icon_image.width }}"
                                          height="{{ block.settings.tab_icon_image.height }}"
                                          class="full"
                                        >
                                      {% endif %}
                                    {% endif %}
                                  </div>
                                {% endif %}
                              {% endfor %}

                              {% if menu_child.title contains '~' %}
                                {% assign splittedChildTitle = menu_child.title | split: '~' %}
                                {% style %}
                                  .text--{{ menu_child_title }}.text.tag--animated-hover:after {
                                    content: "{{ splittedChildTitle[1] | truncate: 10 }}";
                                    color: var(--primary-button-background-color);
                                  }

                                  .menu-mobile__parent-title.{{ menu_parent_title }}:before {
                                      content: " ";
                                      background-color: var(--primary-button-background-color);
                                      width: 7px;
                                      height: 7px;
                                      border-radius: 50%;
                                      color: var(--primary-button-background-color);
                                      margin-bottom: 1rem;
                                      margin-left: -5px;

                                  }
                                {% endstyle %}

                                <a
                                  class="text--{{ menu_child_title }} text tag--animated-hover"
                                  {% if menu_child.links.size == 0 %}
                                    href="{{ menu_child.url }}"
                                  {% endif %}
                                >
                                  {{ splittedChildTitle[0] }}
                                </a>
                              {% else %}
                                <a
                                  class="text--{{ menu_child_title }} text"
                                  {% if menu_child.links.size == 0 %}
                                    href="{{ menu_child.url }}"
                                  {% endif %}
                                >
                                  {{ menu_child.title }}
                                </a>
                              {% endif %}
                              {% if menu_child.links.size > 0 %}
                                <svg
                                  width="8"
                                  height="9"
                                  viewBox="0 0 8 9"
                                  fill="none"
                                  xmlns="http://www.w3.org/2000/svg"
                                  class="svg"
                                >
                                  <path d="M1 5.36346L4.25787 7.62134L7.51575 5.36346" stroke="white" stroke-width="1.5"/>
                                  <path d="M1 1L4.25787 3.25787L7.51575 1" stroke="white" stroke-width="1.5"/>
                                </svg>
                              {% endif %}
                            </div>
                            <div class="menu-mobile__child-childs {% if menu_child.links.size > 0 %}border{% endif %}">
                              {% for menu_grandchild in menu_child.links %}
                                {% if menu_grandchild.title contains '~' %}
                                  {% assign splittedGrandChildTitle = menu_grandchild.title | split: '~' %}
                                  {% style %}
                                    .menu-mobile__child-childs .text--{{ menu_child_title }}.text.tag--animated-hover:after {
                                      content: "{{ splittedGrandChildTitle[1] | truncate: 10 }}";
                                      color: var(--primary-button-background-color);
                                    }

                                    .menu-mobile__parent-title.{{ menu_parent_title }}:before, .menu-mobile__child-title.{{ menu_child_title }}:before {
                                      content: " ";
                                      background-color: var(--primary-button-background-color);
                                      width: 7px;
                                      height: 7px;
                                      border-radius: 50%;
                                      color: var(--primary-button-background-color);
                                      margin-bottom: 1rem;
                                      margin-left: -5px;

                                    }
                                  {% endstyle %}
                                  <a
                                    class="menu-mobile__grandchild-title text--{{ menu_child_title }} text tag--animated-hover"
                                    href="{{ menu_grandchild.url }}"
                                  >
                                    {{ splittedGrandChildTitle[0] }}
                                  </a>
                                {% else %}
                                  <a
                                    class="menu-mobile__grandchild-title text--{{ menu_child_title }} text"
                                    href="{{ menu_grandchild.url }}"
                                  >
                                    {{ menu_grandchild.title }}
                                  </a>
                                {% endif %}
                              {% endfor %}
                              {% for block in section.blocks %}
                                {% if block.settings.tab_title == menu_child.title %}
                                  <div class="menu-mobile__picture-container">
                                    {% if block.settings.show_tab_picture == true %}
                                      <div class="menu-mobile__picture media">
                                        {% if block.settings.tab_content_type == 'svg' %}
                                          {% if block.settings.tab_content_svg == blank %}
                                            {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
                                          {% else %}
                                            {{ block.settings.tab_content_svg }}
                                          {% endif %}
                                        {% elsif block.settings.tab_content_type == 'image' %}
                                          {% if block.settings.tab_content_image == blank %}
                                            {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
                                          {% else %}
                                            <img
                                              srcset="{{ block.settings.tab_content_image | image_url }}"
                                              loading="lazy"
                                              alt="{{ block.settings.tab_content_image | escape }}"
                                              width="{{ block.settings.tab_content_image.width }}"
                                              height="{{ block.settings.tab_content_image.height }}"
                                              class="full"
                                            >
                                          {% endif %}
                                        {% endif %}
                                      </div>
                                      <p class="menu-mobile__picture-description">
                                        {{ block.settings.tab_description }}
                                      </p>
                                    {% endif %}
                                  </div>
                                {% endif %}
                              {% endfor %}
                            </div>
                          </div>
                        {% endfor %}
                      </div>
                    </div>
                  {% endfor %}
                </div>
              </div>
              <div class="menu-mobile__account-container">
                <div class="menu-mobile__account">
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="12" cy="7.25574" r="2.5" stroke="{{ section.settings.content_color }}" stroke-width="1.5"/>
                    <path d="M4.75 13.75H19.25V19.25H4.75V13.75Z" stroke="{{ section.settings.content_color }}" stroke-width="1.5"/>
                  </svg>

                  <a href="/account/login">Account</a>
                </div>
              </div>
            </div>
          </div>
        </menu-drawer-component>
      </menu-mobile>
