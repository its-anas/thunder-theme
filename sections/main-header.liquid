{% schema %}
{
  "name": "Header",
  "class": "main-header",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "select",
      "id": "logo_type",
      "label": "Logo type",
      "options": [
        {
          "value": "svg",
          "label": "Svg"
        },
        {
          "value": "image",
          "label": "Image"
        }
      ],
      "default": "svg",
      "info": "It is highly recommended to use svg logo instead of jpeg/png logo to get the best quality"
    },
    {
      "type": "liquid",
      "id": "logo_svg",
      "label": "Logo - svg",
      "info": "Applicable only if logo type is svg"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo - image",
      "info": "Applicable only if logo type is image"
    },
    {
      "type": "header",
      "content": "Menu"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "select",
      "id": "menu_layout",
      "label": "Layout",
      "options": [
        {
          "value": "logo_first",
          "label": "Logo first, navigation center"
        },
        {
          "value": "logo_first_navigation_inline",
          "label": "Logo first, navigation inline"
        },
        {
          "value": "navigation_first",
          "label": "Navigation first, logo center"
        },
        {
          "value": "drawer",
          "label": "Drawer"
        }
      ],
      "default": "logo_first",
      "info": "This is for desktop only. Drawer layout will be applied to mobile devices"
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "Content color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "header_background_color",
      "label": "Background color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#fff"
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 3,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 2
    },
    {
      "type": "range",
      "id": "border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Border corners radius",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "mega_menu",
      "name": "Mega menu",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab title",
          "info": "Put the title of the tab (menu child) here, exactly like it's shown in the menu. Make sure they are unique and not duplicates. And also respect the uppercase, lowercase and spaces."
        },
        {
          "type": "select",
          "id": "tab_icon_type",
          "label": "Tab icon/image type",
          "options": [
            {
              "value": "svg",
              "label": "svg"
            },
            {
              "value": "image",
              "label": "Image"
            }
          ],
          "default": "svg",
          "info": "It is recommended to use svg icons instead of jpeg/png to get the best quality"
        },
        {
          "type": "liquid",
          "id": "tab_icon_svg",
          "label": "Tab icon - svg",
          "info": "Applicable only if icon type is svg"
        },
        {
          "type": "image_picker",
          "id": "tab_icon_image",
          "label": "Tab icon - image",
          "info": "Applicable only if icon type is image"
        },
        {
          "type": "header",
          "content": "Tab picture"
        },
        {
          "type": "checkbox",
          "id": "show_tab_picture",
          "label": "Show tab picture and description",
          "default": true
        },
        {
          "type": "select",
          "id": "tab_content_type",
          "label": "Tab content image type",
          "options": [
            {
              "value": "svg",
              "label": "svg"
            },
            {
              "value": "image",
              "label": "Image"
            }
          ],
          "default": "svg"
        },
        {
          "type": "liquid",
          "id": "tab_content_svg",
          "label": "Tab content image - svg",
          "info": "Applicable only if image type is svg"
        },
        {
          "type": "image_picker",
          "id": "tab_content_image",
          "label": "Tab content image - image",
          "info": "Applicable only if image type is image"
        },
        {
          "type": "text",
          "id": "tab_description",
          "label": "Tab description",
          "default": "Tab description"
        }
      ]
    }
  ]
}
