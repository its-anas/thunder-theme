                                        display: flex;
                                        flex-direction: row;
                                  }

                                  .menu__parent.menu_parent_title--{{ menu_parent_title }}:before, .menu__child-title.menu_child_title--{{ menu_child_title }}:before {
                                    content: " ";
                                    background-color: var(--primary-button-background-color);
                                    width: 7px;
                                    height: 7px;
                                    border-radius: 50%;
                                    animation: blink 1s linear infinite;
                                    color: var(--primary-button-background-color);
                                    padding-right: 0.2rem;
                                  }
                                {% endstyle %}
                                <a
                                  class="menu__grandchild menu_parent_title--{{ menu_parent_title }} tag--animated-hover"
                                  href="{{ menu_grandchild.url }}"
                                >
                                  {{ splittedGrandChildTitle[0] }}
                                </a>
                              {% else %}
                                <a class="menu__grandchild" href="{{ menu_grandchild.url }}">
                                  {{ menu_grandchild.title }}
                                </a>
                              {% endif %}
                            {% endfor %}
                          </div>
                          {% if menu_child.links.size > 0 %}
                            {% style %}
                              .menu__dropdown.menu_parent_title--{{ menu_parent_title }} {
                                width: 600px !important;
                              }
                            {% endstyle %}
                          {% endif %}
                          {% for block in section.blocks %}
                            {% if block.settings.tab_title == menu_child.title %}
                              {% if block.settings.show_tab_picture == true %}
                                {% style %}
                                    .menu__childs.menu_parent_title--{{ menu_parent_title }} {
                                      border-right: 1px solid  {{ section.settings.border_color }};
                                    }
