                                  }
                                  .menu__parent:hover .menu__dropdown.menu_parent_title--{{ menu_parent_title }} {
                                    transform: translateX(-50%) translateY(0%);
                                  }
                              {% endif %}
                            {% endstyle %}
                          {% endif %}
                          {% for block in section.blocks %}
                            {% if block.settings.tab_title == menu_child.title %}
                              <div class="menu__child-icon media">
                                {% if block.settings.tab_icon_type == 'svg' %}
                                  {% if block.settings.tab_icon_svg == blank %}
                                    {{ 'product-1' | placeholder_svg_tag: 'placeholder' }}
                                  {% else %}
