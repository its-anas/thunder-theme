{%- assign image = line_item.product.featured_image -%}
{%- capture sizes -%}
'(min-width: 1024px) calc((1600px - 6rem - {{ section.settings.collections_per_row_desktop | times: 2 }}rem) / {{section.settings.collections_per_row_desktop }}), 
'(min-width: 750px) calc((100vw - 6rem - {{ section.settings.collections_per_row_desktop | times: 2 }}rem) / {{section.settings.collections_per_row_desktop }}), 
calc((100vw - 1rem - {{ section.settings.collections_per_row_mobile | times: 1 }}rem ) / {{section.settings.collections_per_row_mobile}})'
{%- endcapture -%}
{%- assign widths = '125, 150, 175, 200, 225, 250, 300, 325, 350, 375, 400, 425, 450, 475' -%}
{%- assign width = '475' -%}
{{
  image
  | image_url: width: 3840
  | image_tag:
    loading: 'lazy',
    class: 'cover',
    alt: image.alt,
    width: image.width,
    height: image.height,
    sizes: sizes,
    widths: widths
}}
