{%- assign sizes = '100vw' -%}
{%- assign widths = '350, 500, 750, 1000, 1250, 1500, 1750, 2000, 2500, 3000, 3500, 3750' -%}
{{
  image
  | image_url: width: 3750
  | image_tag:
    loading: 'lazy',
    class: 'cover',
    alt: image.alt,
    width: image.width,
    height: image.height,
    sizes: sizes,
    widths: widths
}}
