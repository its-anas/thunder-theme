{% style %}
  :root {
     --font-family: {{ settings.font_type.family }}, {{ settings.font_type.fallback_families }};
     --font-style: {{ settings.font_type.style }};
     --font-weight: {{ settings.font_type.weight }};
     --font-weight-bold: {{ settings.font_type.weight | plus: 300 | at_most: 1000 }};
     --font-size: {{ settings.size }}px;
     --font-size-type-scale: {{ settings.size }};
     --font-type-scale: {{ settings.type_scale }};

     --heading-style: {{ settings.headings_style }};
     --h1-font-size: calc((((((var(--font-size-type-scale) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale) * 1px);
     --h2-font-size: calc(((((var(--font-size-type-scale) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale) * 1px);
     --h3-font-size: calc((((var(--font-size-type-scale) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale) * 1px);
     --h4-font-size: calc(((var(--font-size-type-scale) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale) * 1px);
     --h5-font-size: calc(var(--font-size-type-scale) * (var(--font-type-scale) * var(--font-type-scale) * 1px));
     --h6-font-size: calc(var(--font-size-type-scale) * var(--font-type-scale) * 1px);

     --xlarge-font-size: calc(var(--font-size-type-scale) * var(--font-type-scale)  * var(--font-type-scale) * 1px);
     --small-font-size: calc(var(--font-size-type-scale) / var(--font-type-scale) * 1px);
     --xsmall-font-size: calc(var(--font-size-type-scale) / var(--font-type-scale) / var(--font-type-scale) * 1px);
     --xxsmall-font-size: calc(var(--font-size-type-scale) / var(--font-type-scale) / var(--font-type-scale) / var(--font-type-scale) * 1px);
     --xxxsmall-font-size: calc(var(--font-size-type-scale) / var(--font-type-scale) / var(--font-type-scale) / var(--font-type-scale) / var(--font-type-scale) * 1px);
     --xxxxsmall-font-size: calc(var(--font-size-type-scale) / var(--font-type-scale) / var(--font-type-scale) / var(--font-type-scale) / var(--font-type-scale) / var(--font-type-scale) * 1px);

     --heading-color: {{ settings.heading_color }};
     --text-color: {{ settings.text_color }};
     --secondary-text-color: {{ settings.secondary_text_color }};
     --background-color: {{ settings.background_color }};
     --secondary-background-color: {{ settings.secondary_background_color }};

     --error-text-color: {{ settings.error_text_color }};
     --error-background-color:  {{ settings.error_background_color }};
     --success-text-color:  {{ settings.success_text_color }};
     --success-background-color:  {{ settings.success_background_color }};

     --primary-button-text-color: {{ settings.primary_button_text_color }};
     --primary-button-background-color: {{ settings.primary_button_background_color }};
     --primary-button-border-color: {{ settings.primary_button_border_color }};
     --secondary-button-text-color: {{ settings.secondary_button_text_color }};
     --secondary-button-background-color: {{ settings.secondary_button_background_color }};
     --secondary-button-border-color: {{ settings.secondary_button_border_color }};

     --button-text-border-hover-color: {{ settings.button_text_border_hover_color }};
     --button-background-hover-color: {{ settings.button_background_hover_color }};
     --button-animation-color: {{ settings.button_animation_color }};
     --button-border-width : {{ settings.button_border_width }}px;

     --global-border-radius: {{ settings.global_border_radius }}px;
     --global-border-width: {{ settings.global_border_width }}px;
     --global-border-color: {{ settings.global_border_color }};

     --wrapped-content-width: {{ settings.wrapped_section_width }}px;
     --button_symbol : "{{ settings.button_symbol | truncate: 2 }}" ;
     --free-shipping-threshold : {{ settings.free_shipping_threshold }} ;
  }

  .button--primary.border:after, .button--secondary.border:after, .button--primary:not(.border):after, .button--secondary:not(.border):after {
       content: "{{ settings.button_symbol | truncate: 2 }}";
  }
  .button--link:after {
       content: "{{ settings.button_symbol | truncate: 2 }}";
  }
  .shopify-payment-button__button:after {
       content: "{{ settings.button_symbol | truncate: 2 }}";
  }

  @media screen and (min-width: 750px) {
       :root {
               --font-size: {{ settings.size }}px;
               --font-size-type-scale: {{ settings.size }};
               --font-type-scale: {{ settings.type_scale }};
       }
  }

  {{ settings.font_type | font_face: font_display: 'swap' }}

  {%- if settings.header_layout == "header_first" %}
      .main-announcement-bar {
              order: 2;
      }
      .main-header {
              order: 1;
      }
  {% else %}
      .main-announcement-bar {
              order: 1;
      }
      .main-header {
              order: 2;
      }
  {% endif %}

  {%- if settings.show_corner_effect == true %}
        .corner-border {
                position: relative;
        }

        .corner-border:before,
        .corner-border:after,
        .corner-border > .corner-border-target:before,
        .corner-border > .corner-border-target:after {
                content: " ";
                position: absolute;
                z-index: 2;
                width: 10%;
                height: 10%;
                border-color: var(--global-border-color);
                border-style: solid;
                transition: all 0.2s ease;
                pointer-events: none;
        }

        @media screen and (min-width: 1024px) {
                .corner-border:hover:before,
                .corner-border:hover:after,
                .corner-border:hover .corner-border-target:before,
                .corner-border:hover .corner-border-target:after {
                        width: 40%;
                        height: 40%;
                        transition: all 0.2s ease;
                }
        }

        .corner-border:before {
                top: 0;
                left: 0;
                border-width: 1px 0 0 1px;
        }

        .corner-border:after {
                top: 0;
                right: 0;
                border-width: 1px 1px 0 0;
        }

        .corner-border > .corner-border-target:before {
                right: 0;
                bottom: 0;
                border-width: 0 1px 1px 0;
        }

        .corner-border > .corner-border-target:after {
                bottom: 0;
                left: 0;
                border-width: 0 0 1px 1px;
        }


  {% endif %}
{% endstyle %}
