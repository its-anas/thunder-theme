<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    {%- render 'meta-tags' -%}
    {%- render 'css-variables' -%}
    <link href="{{ 'global-styles.css' | asset_url  }}" rel="stylesheet" type="text/css" media="all">
    {%- render 'social-meta-tags' -%}
    {%- render 'preloaded-scripts' -%}
    <script src="{{ 'global-scripts.js' | asset_url }}" defer></script>
    <title>
      {{ page_title }}
    </title>

    {{ content_for_header }}
  </head>

  <body>
    <div class="theme-overlay hidden"></div>
    <div class="header-section {% if settings.header_full_width == false %}boxed{% endif %} {% if settings.header_sticky == true %}sticky{% endif %}">
      <div class="header-container">
        {% liquid
          section 'header'
          section 'announcement-bar'
        %}
      </div>
    </div>
    {%- liquid
      section 'search-drawer'
      section 'cart-drawer'
      section 'newsletter-popup'
      section 'quick-view'
      echo content_for_layout
      section 'footer'
    -%}
  </body>
</html>
