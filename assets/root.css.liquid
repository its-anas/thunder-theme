var(--font-type-scale) * 1px); --h2-font-size: calc(((((var(--font-size-type-scale) * var(--font-type-scale)) *
var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale)) * var(--font-type-scale) * 1px);
--h3-font-size: calc((((var(--font-size-type-scale) * var(--font-type-scale)) * var(--font-type-scale)) *
