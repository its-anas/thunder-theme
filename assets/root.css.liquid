:root { --font-family: {{ settings.font_type.family }}, {{ settings.font_type.fallback_families }}; --font-style:
{{ settings.font_type.style }}; --font-weight: {{ settings.font_type.weight }}; --font-weight-bold:
{{ settings.font_type.weight | plus: 300 | at_most: 1000 }}; --font-size: {{ settings.size | minus: 1 }}px;
--font-size-type-scale: {{ settings.size | minus: 1 }}; --font-type-scale: {{ settings.type_scale | times: 0.9 }};

--headings-color: {{ settings.headings_color }}; --text-color: {{ settings.text_color }}; --background-color :
{{ settings.page_background_color }};

--primary-button-text-color: {{ settings.primary_button_text_color }}; --primary-button-background-color:
{{ settings.primary_button_background_color }}; --primary-button-border-color:
{{ settings.primary_button_border_color }}; --secondary-button-text-color: {{ settings.secondary_button_text_color }};
--secondary-button-background-color: {{ settings.secondary_button_background_color }}; --secondary-button-border-color:
{{ settings.secondary_button_border_color }};

--button-text-border-hover-color: {{ settings.button_text_border_hover_color }}; --button-background-hover-color:
{{ settings.button_background_hover_color }}; --button-animation-color: {{ settings.button_animation_color }};

--headings-style: {{ settings.headings_style }};

--button-border-width : {{ settings.button_border_width }}px; --button-border-radius :
